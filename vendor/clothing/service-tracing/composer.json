{
    "name": "clothing/service-tracing",
    "type": "library",
    "description": "Service tracing client for governace platform.",
    "homepage": "http://gitlab.egomsl.com/clothing/packages/service-tracing",
    "authors": [
        {
            "name": "zhouyl",
            "email": "zhouyonglong@globalegrow.com"
        }
    ],
    "repositories": [
        {
            "url": "git@gitlab.egomsl.com:clothing/packages/utils.git",
            "type": "git"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "clothing/utils": "^1.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "ext-redis": ">=2.0",
        "monolog/monolog": "^1.24",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Clothing\\Tools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clothing\\Tools\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "scripts": {
        "test": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpcs-fix": "./vendor/bin/php-cs-fixer fix -v;"
    }
}
