{
    "name": "clothing/utils",
    "type": "library",
    "description": "Utility classes and functions.",
    "homepage": "http://gitlab.egomsl.com/clothing/packages/utils",
    "authors": [
        {
            "name": "zhouyl",
            "email": "zhouyonglong@globalegrow.com"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "php": ">=7.1.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.12",
        "phpunit/phpunit": ">5.0"
    },
    "autoload": {
        "psr-4": {
            "Clothing\\Tools\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Clothing\\Tools\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "scripts": {
        "test": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpcs-fix": "./vendor/bin/php-cs-fixer fix -v;",
        "phpstan": "./vendor/bin/phpstan analyse;"
    }
}
