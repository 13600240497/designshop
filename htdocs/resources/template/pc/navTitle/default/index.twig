{% set titleData = {
	title_height:data.title_height is not null?data.title_height:100,
	title_viewPaddingTB:data.title_viewPaddingTB|default(0),
	title_viewPaddingLR:data.title_viewPaddingLR|default(0),
	title_titleWidth:data.title_titleWidth is not null?data.title_titleWidth:400,
	title_titleHeight:data.title_titleHeight is not null?data.title_titleHeight:60,
	title_viewBorderC:data.title_viewBorderC is not null?data.title_viewBorderC:'#FD9E62',
}%}
<div data-gid="gs-title-default">
	<div class="gs-title-wrap" style="
		{% if data.title_boxMarginTop %}margin-top: {{ data.title_boxMarginTop }}px;{% endif %}
		{% if data.title_boxMarginBottom %}margin-bottom: {{ data.title_boxMarginBottom }}px;{% endif %}
		{% if data.title_boxPaddingTop %}padding-top: {{ data.title_boxPaddingTop }}px;{% endif %}
		{% if data.title_boxPaddingBottom %}padding-bottom: {{ data.title_boxPaddingBottom }}px;{% endif %}
		{% if titleData.title_height %}height:{{ titleData.title_height }}px;{% endif %}
		background-image: url({% if data.title_imgSrc %}{{ data.title_imgSrc }}{% else %}{% endif %});
		background-position: center;
		background-repeat: no-repeat;
		background-color:{% if data.title_bgColor %}{{ data.title_bgColor }}{% endif %};
		text-align:center;
		width:100%;
		overflow: hidden;
		display:table;
	">
		<div class="gs-title-box" style="vertical-align: middle;display: table-cell;">
			<p style="
				display:block;
				font-size:{% if data.title_titleFont %}{{ data.title_titleFont }}{% else %} 16{% endif %}px;
				color:{% if data.title_titleColor %}{{ data.title_titleColor }}{% else %} #333333{% endif %};
				font-weight:{% if data.title_titleWeight %}{{ data.title_titleWeight }}{% else %} bold{% endif %};
				{% if titleData.title_titleWidth %}width:{{titleData.title_titleWidth}}px;{% endif %}
				{% if titleData.title_titleHeight %}height:{{titleData.title_titleHeight}}px;line-height:{{titleData.title_titleHeight}}px;{% endif %}
				margin-left:auto;
				margin-right:auto;
				{% if data.title_titleBgI %}background:url('{{data.title_titleBgI}}') no-repeat center center/100%;{% endif %}
				{# margin-top:
				{% if data.title_titleFont %}
					{% if data.title_height %}{{ data.title_height / 2 - data.title_titleFont / 2 }}{% else %}{{ 40 - data.title_titleFont / 2 }}{% endif %}px
				{% else %}
					{% if data.title_height %}{{ data.title_height / 2 - 8 }}{% else %}32{% endif %}px
				{% endif %}; #}
			">
				{% if data.titleText %}{{ data.titleText }}{% else %}请设置导航标题{% endif %}
			</p>
			{% if data.viewHref and (data.title_isShow is not defined or data.title_isShow == 1) %}
			<a href="{{ data.viewHref }}" style="
				{% if data.viewHref %}cursor: pointer;{% else%} cursor:default; {% endif %}
				font-size:{% if data.title_viewFont %}{{ data.title_viewFont }}{% else %} 12{% endif %}px;
				color:{% if data.title_viewColor %}{{ data.title_viewColor }}{% else %} #333333{% endif %};
				font-weight:{% if data.title_viewWeight %}{{ data.title_viewWeight }}{% else %} normal{% endif %};
				margin-top:{{data.title_viewMarginT|default(0)}}px;
				display:inline-block;
				{% if data.title_viewRadius %}border-radius:{{data.title_viewRadius}}px;{% endif %}
				{% if data.title_viewBgColor %}background-color:{{data.title_viewBgColor}};{% endif %}
				{% if data.title_viewMarginT %}margin-top:{{data.title_viewMarginT}}px;{% endif %}
				padding:{{titleData.title_viewPaddingTB}}px {{titleData.title_viewPaddingLR}}px {{titleData.title_viewPaddingTB}}px {{titleData.title_viewPaddingLR}}px;
				{% if titleData.title_viewBorderC %}border-color:{{titleData.title_viewBorderC}};{% endif %}
				border-width:{{data.title_viewBorderW|default('0')}}px;
				{% if data.title_viewBorderS %}border-style:{{data.title_viewBorderS}};{% endif %}
			">{% if data.title_viewText %}{{ data.title_viewText }}{% else %}View More{% endif %}</a>
			{% endif %}
		</div>
	</div>
</div>
