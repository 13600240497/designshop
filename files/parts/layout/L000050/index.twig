<div class="geshop-layout-box layout-drag geshop-container geshop-gb-component ui-{{ pageInstanceId }}" data-key="L000050" id="{{pageInstanceId}}" style="
	{% if customData.background_img %}background-image: url({{ customData.background_img }}); background-position: center top; background-repeat: no-repeat;{% endif %}
">
    <style>
    /*背景图*/
.geshop-gb-component.ui-{{ pageInstanceId }}{
{% if customData.base_box_bgImage %}
	background-image:url({{ customData.base_box_bgImage }});
{% endif %}
{% if customData.component_bg_value %}
{{ customData.component_bg_value }}
{% endif %}
}
</style>

<div class="geshop-row gb_wrapper_common" style="
        margin: 0 auto;
        width: {{ layoutData.width }};
	    {% if customData.background_color %}background-color: {{ customData.background_color }};{% endif %}
    ">
        {% for item in layoutData.columns %}
        <div class="geshop-col-12" style="width: {{ item.width }}" data-position="{{ loop.index }}">
            <div class="component-drop">{{ data[loop.index] }}</div>
        </div>
        {% endfor %}
    </div>
</div>
