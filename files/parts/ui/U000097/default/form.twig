	function get_time_srot(arra, event){

        var temp;

        for(var i=0;i<arra.length;i++){

            for(var j=0;j<arra.length-i-1;j++){

                if(arra[j][event]>arra[j+1][event]){
                    temp=arra[j];
                    arra[j]=arra[j+1];
                    arra[j+1]=temp;
                }
            }
        };
    return arra;
    }



