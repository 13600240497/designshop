						},500);
						return false
					}else if ( $start_time_item.attr('data-datetime') && $end_time_item.attr('data-datetime') ) {
						_this.parents('.down-timestamp').attr('data-timerange', $start_time_item.attr('data-datetime') + $end_time_item.attr('data-datetime'))
					}
					
					
