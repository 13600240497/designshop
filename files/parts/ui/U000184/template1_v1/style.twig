{% set root = '#U000184_'~pageInstanceId %}
{% set classSpace = '.geshop-component-body' %}
{% set classRoot = root~' '~classSpace %}

    {# 三端共有样式 #}
    {{ classRoot }} {
        width: 100%;
        height: 100%;
        margin-left: auto;
        margin-right: auto;
        justify-content: {{ data.img_align|default('center') }};
    }

    {{ classRoot }} .time-bg{
        background-color: {{ data.mask_circle_rgba|default('255,255,255,.3') }};
    }
    {{ classRoot }} .time-text{
        color: {{ data.mask_font_color|default('#FFFFFF') }}
    }

    {# pc 端样式 #}
    {{ root }}{
        margin-top: {{ data.box_margin_top|default(0) }}px;
        margin-bottom: {{ data.box_margin_bottom|default(0) }}px;
        margin-left: {{ data.box_margin_left|default(0) }}px;
        margin-right: {{ data.box_margin_right|default(0) }}px;
    }
    {{ classRoot }} .mask{
        border-radius: {{ data.mask_radius|default(0) }}px;
        background-color: {{ data.mask_bg_rgba|default('255,255,255,.3') }};
    }
    {{ classRoot }} .banner__img--box img{
        border-radius: {{ data.mask_radius|default(0) }}px;
    }

    {{ classRoot }} .time-bg{
        width: {{ data.font_w ?? 220 }}px;
        height: {{ data.font_w ?? 220 }}px;
        line-height: {{ data.font_w ?? 220 }}px;
    }
