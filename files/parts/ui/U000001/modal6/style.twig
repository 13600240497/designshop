
.geshop-U000001-modal6-{{ pageInstanceId }} {
    margin-bottom: {{ data.box_margin_bottom | default(32) }}px;
    margin-top: {{ data.component_margin_top | default(0) }}px;
}

.geshop-U000001-modal6-{{ pageInstanceId }} .geshop-U000001-modal6-wrapper {
    background-color:{{ data.box_bg_color | default('#fff')}};
}

.geshop-U000001-modal6-{{ pageInstanceId }} li:hover:after {
    border-color: {{ data.hover_bdColor | default('#333') }};
}

.geshop-U000001-modal6-{{ pageInstanceId }} .shop_price{
    color: {{ data.shop_price_color | default('#333') }}
}

{%
    include geshop.default.pc.button_buy with { style: {
        'background-color': data.buynow_bg_color,
        'border-radius': data.buynow_radius,
        'background-image': data.buynow_bg_image,
        'color': data.buynow_font_color,
    }}
%}

{%
    include geshop.default.pc.discount_float with { style: {
        'background-color': data.discount_bg_color,
        'color': data.discount_font_color,
        'background-image': data.discount_bg_image
    }}
%}
{%
    include geshop.default.pc.shop_price with { style: {
    'color': data.shop_price_color
}}
%}
