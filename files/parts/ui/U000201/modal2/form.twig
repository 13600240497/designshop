<script>


    {#  自定义保存函数 #}
    function onSubmit(progress) {
        var shareArr = [];
        $('#U000201-modal2 input.share_data:checked').each(function(index,element){
            var $val = $(this).val();
            shareArr.push($val);
        });

        $('input[name=share_data]').val(JSON.stringify(shareArr));
        progress.next()
 };
</script>
