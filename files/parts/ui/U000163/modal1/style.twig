{% set space = '#U000163_' ~ pageInstanceId ~ '_container' %}

{{ space }} {
    margin-bottom: {{ data.box_margin_bottom | default(0) }}px;
}

{{ space }} .geshop-u000163-modal1-wrapper {
    background-color: {{ data.box_bg_color | default('#f2f2f2') }};
}

{{ space }} li:before {
    border-color: {{ data.hover_borderColor | default('#333333') }};
}

{# 预促销没开始的状态 #}
{{ space }} li.is-ready .item-promotion {
    color: {{ data.pre_text_color | default('#ffffff') }};
    {% if data.notstart_pre_bgImg is not empty %}
        background-image: url('{{ data.notstart_pre_bgImg }}');
        background-repeat: no-repeat;
        background-size: 100%;
    {% else %}
        background-color: {{ data.notstart_prePriceBgC | default('#333333') }};
    {% endif %}
}
{{ space }} li.is-ready .item-price {
    color: {{ data.notstart_text_color | default('#333333') }};
}

{# 正在预促销 #}
{{ space }} li.is-now .item-promotion {
    color: {{ data.underway_text_color | default('#ffffff') }};
    {% if data.underway_pre_bgImg is not empty %}
        background-image: url('{{ data.underway_pre_bgImg }}');
        background-repeat: no-repeat;
        background-size: 100%;
    {% else %}
        background-color: {{ data.underway_prePriceBgC | default('#333333') }};
    {% endif %}
}


