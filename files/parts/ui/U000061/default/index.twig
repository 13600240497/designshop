<div data-key="U000061" data-id="{{ pageInstanceId }}" data-static-domain="{{staticDomain}}" data-gid="U000061_swiper"
  class="geshop-component-box component-drag gs-index-main" style="margin-top: {{ data.marginTop | default(0) }}px; margin-bottom: {{ data.marginBottom | default(0) }}px;">
	<div class="geshop swiper-container geshop-index-goods">
		{% if data.goodsInfo != 0 %}
		<div class="swiper-wrapper" style="height:328px;">
			{% for content in data.goodsInfo | default(0..3) %} 
			 	{% for item in content.lists %}
			<div style="position:relative;width:310px;" class="geshop swiper-slide" id="custom-slide">
				<a href="{{item.url_title}}" class="hover-img logsss_event"
					data-logsss-event-value="{ 'pm':'mp','p':'gs-{{ pageId }}-{{ pageInstanceId }}','ubcta':{'cpID':'{{ pageInstanceId }}','cpnum':'{{ compKey }}','cplocation':'{{ uiIndex }}','sku':'{{ item.goods_sn }}','cporder':'{{ layoutIndex }}','rank':'{{ loop.index }}'} }"
				>
					<img class="js_gdexp_lazy js-geshopImg-lazyload js_gbexp_lazy" data-original="{{item.goods_img|default(data.default.good)}}" src="{{item.goods_img|default(data.default.good)}}" style="width: 250px; height: 250px;"
						data-logsss-browser-value="{ 'pm':'mp','p':'gs-{{ pageId }}-{{ pageInstanceId }}','bv':{'cpID':'{{ pageInstanceId }}','cpnum':'{{ compKey }}','cplocation':'{{ uiIndex }}','sku':'{{ item.goods_sn }}','cporder':'{{ layoutIndex }}','rank':'{{ loop.index }}'} }"
					>
				</a>
				{% if item.goods_title |length>1 %}
				<p id='pro-name'>
					<a href="{{item.url_title}}" title="{{item.goods_title}}" class="logsss_event"
						data-logsss-event-value="{ 'pm':'mp','p':'gs-{{ pageId }}-{{ pageInstanceId }}','ubcta':{'cpID':'{{ pageInstanceId }}','cpnum':'{{ compKey }}','cplocation':'{{ uiIndex }}','sku':'{{ item.goods_sn }}','cporder':'{{ layoutIndex }}','rank':'{{ loop.index }}'} }"
					>{{item.goods_title|default("请添加描述")}}</a>
				</p>
				<p id='pro-price'>
					<strong id="new-price" class="my_shop_price" data-orgp="{{item.shop_price}}">{{item.shop_price}}</strong>
					<del id="old-price" class="my_shop_price" data-orgp="{{item.market_price}}">{{item.market_price}}</del>
				</p>
				{% else %}
				<p id='pro-name' class="hover-title">
					<a href="{{item.url_title}}" title="{{item.goods_title}}">{{item.goods_title|default("请添加描述")}}</a>
				</p>
				<p id='pro-price' class="hover-price">
					<strong id="new-price" class="my_shop_price" data-orgp="{{item.shop_price}}">{{item.shop_price}}</strong>
					<del id="old-price" class="my_shop_price" data-orgp="{{item.market_price}}">{{item.market_price}}</del>
				</p>
				{% endif %}
			</div>
			{% endfor %} 
	   {% endfor %}
		</div>
		<div class="geshop swiper-button-prev" id="pre-button" style="display: none;"></div>
	  <div class="geshop swiper-button-next" id="next-button" style="display: none;"></div>
		{% else %}
		<img src="{{ data.default.shuffling }}" style="height:400px;display:block;margin:0 auto;">
		{% endif %}
	</div>
</div>
<link rel="stylesheet" href="/resources/javascripts/library/swiper/swiper.min.css" type="text/css" />
