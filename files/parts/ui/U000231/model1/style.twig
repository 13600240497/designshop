
{% set space = '#U000231_'~pageInstanceId %}

{% set body = space~' .geshop-U000231-model1-body' %}

{{ space }} .geshop-U000231-model1-body {
    width: 100%;
    overflow: hidden;
}

{# 三端共有样式 #}
{{ body }} .geshop-page-part{
    background-color:{{ data.bg_color|default('#FFFFFF') }};
    color:{{ data.part_ft_color|default('#333333') }};

}

{{ body }} .geshop-page-part li a{
    background-color:{{ data.part_bg_color|default('#D8D8D8') }};
}

{{ body }} .geshop-page-part li a:hover{
    color:{{ data.hover_part_ft_color|default('#FFFFFF') }};
    background-color:{{ data.hover_part_bg_color|default('#999999') }};
}


{{ body }} .side-btn{
    background-color:{{ data.part_bg_color|default('#D8D8D8') }};

}
{{ body }} .side-icon span{
    border-color:{{ data.part_ft_color|default('#333333') }};
}


