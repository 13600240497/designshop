{% set form_pc = {
    pc_base_width: data.pc_base_width|default(302),
    pc_part_space: data.pc_part_space|default(2)
} %}

{% set form_m = {
    m_base_width: data.m_base_width|default(204),
    m_part_space: data.m_part_space|default(2)
} %}

{# PC+PAD 模式 #}
@media screen and (min-width: 768px) {
    {{ body }} .geshop-page-navigator,{{ body }} .geshop-page-content{
        width:{{ form_pc.pc_base_width }}px;
    }
    {{ body }} .geshop-page-part{
        font-size:{{ data.pc_part_ft_size|default(14) }}px;
        padding:{{ form_pc.pc_part_space }}px;
    }

    {{ body }} .geshop-page-part li{
        margin-bottom:{{ form_pc.pc_part_space }}px;
    }


    {{ body }} .geshop-page-part li a{
        font-size:{{ data.pc_part_ft_size|default(14) }}px;
        border-radius:{{ data.pc_part_radius|default(0) }}px;
{#{% if data.bg_color == 'transparent' %}#}
{#    border-right:{{ form_pc.pc_part_space }}px solid #FFFFFF;#}
{#    {% else %}#}
{#        border-right:{{ form_pc.pc_part_space }}px solid {{ data.bg_color|default('#FFFFFF') }};#}
{#{% endif %}#}
    }

    {{ body }} .geshop-page-part li .part-col2{
        width:{{ (form_pc.pc_base_width - form_pc.pc_part_space*3)/2 }}px;
    }
    {{ body }} .geshop-page-part li .part-col2:first-child{
        margin-right:{{ form_pc.pc_part_space }}px;
    }


    {{ body }} .geshop-navigator-left .side-btn{
        left:{{ form_pc.pc_base_width }}px;
    }

    {{ body }} .geshop-statu-fold.geshop-navigator-left .side-btn{
        -webkit-transform: translateX(-{{ form_pc.pc_base_width }}px);
        transform: translateX(-{{ form_pc.pc_base_width }}px);
    }
    {{ body }} .geshop-navigator-right .side-btn{
        right:{{ form_pc.pc_base_width }}px;
    }

    {{ body }} .geshop-statu-fold.geshop-navigator-right .side-btn{
        -webkit-transform: translateX({{ form_pc.pc_base_width }}px);
        transform: translateX({{ form_pc.pc_base_width }}px);
    }

    {{ body }} .geshop-page-main,{{ body }} .geshop-page-goTop{
        padding: 0 {{ form_pc.pc_part_space }}px;
    }
}

