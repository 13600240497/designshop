{% set liCol = ['geshop-col-12','geshop-col-6','geshop-col-4','geshop-col-3','geshop-col-2','geshop-col-1']%}
{% set suffix ='rem'%}
{% set remUnit = 75 %}

{% if data.colNum == '1'%}
    {% set colClass = liCol[0] %}
{% elseif data.colNum == '2' %}
    {% set colClass = liCol[1] %}
{% elseif data.colNum == '3' %}
    {% set colClass = liCol[2] %}
{% elseif data.colNum == '4' %}
    {% set colClass = liCol[3] %}
{% elseif data.colNum == '5' %}
    {% set colClass = liCol[4] %}
{% else %}
    {% set colClass = liCol[3] %}
{% endif %}




{%
    set pageData = {
				price_ft_weight:data.price_ft_weight|default(1),
				base_bg_shadow:data.base_bg_shadow|default(0),
		lang:data.lang|default('en'),
		page_point_type:'landPage',
		vm_btn_height:(data.vm_btn_height|default(100)/remUnit)|number_format(3, '.')~suffix,
		vm_btn_marginBot:(data.vm_btn_marginBot|default(32)/remUnit)|number_format(3, '.')~suffix,
		vm_btn_text:data.vm_btn_text,
		vm_btn_href:data.vm_btn_href|default(''),
		vm_btn_ftc:data.vm_btn_ftc|default('#ff7e00'),
		vm_btn_fts:(data.vm_btn_fts|default(20)/remUnit)|number_format(3, '.')~suffix,
		vm_btn_align:data.vm_btn_align|default('right'),
		vm_btn_ftw:data.vm_btn_ftw|default('1'),
    }
%}

<div class="geshop-component-box component-drag component-sync clearfix geshop-gb-component ui-{{ pageInstanceId }}" data-gid="U000174_default" data-key="U000174" data-id="{{ pageInstanceId }}"
	data-editenv="{{data.isEditEnv}}" data-static-domain="{{staticDomain}}" data-vis="{{liLength}}" data-lang="{{lang}}"
	style="margin-bottom: {{ pageData.vm_btn_marginBot }};">
    <!-- embed stylesheet begin -->
    <style type="text/css">
[data-gid="U000174_default"][data-id="{{ pageInstanceId }}"] .gb_goodsWrap{
	position: relative;
}
[data-gid="U000174_default"][data-id="{{ pageInstanceId }}"] .vm-btn-wrap{
	height:{{ pageData.vm_btn_height}};
	line-height:{{ pageData.vm_btn_height}};
    text-align: {{ pageData.vm_btn_align }};
}

[data-gid="U000174_default"][data-id="{{ pageInstanceId }}"] .vm-btn-wrap a{
	height:100%;
	color:{{ pageData.vm_btn_ftc }};
	font-size:{{ pageData.vm_btn_fts }};
	font-weight:{{pageData.vm_btn_ftw=='1'?'bold':'normal'}};
}

    /*背景图*/
.geshop-gb-component.ui-{{ pageInstanceId }} .gb_wrapper_common{
{% if data.base_box_bgImage %}
	background-image:url({{ data.base_box_bgImage }});
{% endif %}
{% if data.component_bg_value %}
{{ data.component_bg_value }}
{% endif %}
}

</style>
    <!-- embed stylesheet end -->

	{# 专题页/落地页 埋点 pagePoint #}

	{% if pageData.page_point_type|default('activityPage') ==  'activityPage' %}
		{% set pagePoint = {
			wrapLink: 'track-goodsItem',
			goodLink: 'track-goodsLink',
			prodLink:''
		}%}

	{% elseif pageData.page_point_type ==  'landPage' %}
			{% set pagePoint = {
			wrapLink: 'subjectGoodItem',
			goodLink: 'js-link',
			prodLink:'showProd'
		}%}
	{% else %}
		{% set pagePoint = {
			wrapLink: 'track-goodsItem',
			goodLink: 'track-goodsLink',
			prodLink:''
		}%}

	{% endif %}

    <div class="geshop-col-12">
		<div class="gb_goodsWrap gb_wrapper_common" data-skus="{{data.goodsSKUList}}" data-isEditEnv="{{data.isEditEnv}}">
			<div class="vm-btn-wrap">
				<a href="{{pageData.vm_btn_href}}"><span>{{pageData.vm_btn_text|default(gb_component_trans(lang , 'view_more'))}}</span><i class="gs-iconfont gs-icon-right"></i></a>
			</div>
		</div>
    </div>
</div>

