<style type="text/css">
	.geshop-gb-component.ui-{{ pageInstanceId }}{
		margin-top: {{ pageData.base_magin_top }};
		margin-bottom:{{pageData.base_magin_bottom}};
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .js-addCart{
		background-color:{{pageData.buy_cart_bgc}};
	}
	{#.geshop-gb-component.ui-{{ pageInstanceId }} .gb_goodsWrap{#}
	{#background-color:{{pageData.base_bgc}};#}
	{#}#}
	
	
	
	{# 折扣标 #}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount{
		background-color:{{pageData.discount_bgc}};
		color:{{pageData.discount_ftc}};
		width:{{pageData.discount_width}};
		height:{{pageData.discount_height}};
		top:{{pageData.discount_top}};
		right:{{pageData.discount_right}};
	{% if pageData.discount_bgImage %}
		background:url({{pageData.discount_bgImage}}) no-repeat center center/100% 100%;
		border-radius:0;
	{% endif %}
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount span{
		font-size:{{pageData.discount_fts}};
	}
	
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount .curtoff-text{
		font-size:{{pageData.discount_off_fts}};
	}
	
	{# 售价 #}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-price .gs-shop-price{
		font-size:{{pageData.price_fts}};
		color:{{pageData.price_color}};
	}
	
	{# 购买按钮设置 #}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy .buyLink{
		color:{{pageData.buy_ftc}};
		background-color:{{pageData.buy_bgc}};
		font-size:{{pageData.buy_fts}};
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy .js-addCart{
		background-color:{{pageData.buy_cart_bgc}};
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy .buyLink:hover{
		color:{{pageData.buy_hover_ftc}};
		background-color:{{pageData.buy_hover_bgc}};
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy .js-addCart:hover{
		background-color:{{pageData.buy_cart_hover_bgc}};
	}
	
	{# 库存设置 #}
	
	.geshop-gb-component.ui-{{ pageInstanceId }} .process-inner{
		background:{{pageData.limit_progress_bgc}};
	}
	
	.geshop-gb-component.ui-{{ pageInstanceId }} .goods-limit-tips .num{
		color:{{pageData.limit_left_color}};
	}
	
	{# 倒计时设置 #}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-time{
		background-color: {{pageData.down_bgc}};
		color: {{pageData.down_ftc}};
	}
	
	{# 投影设置 #}
	
	{% if pageData.base_bg_shadow == '0'%}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item{
		box-shadow:none;
	}
	{% else %}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item{
		box-shadow: 0px 0px 10px {{pageData.base_bg_shadow_color}};
	}
	
	{% endif %}
	
	/* 图片尺寸 */
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-item-common {
		display: block;
		overflow: hidden;
		text-align: center;
		height: 322px;
	}
	.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-item-common img {
		height: 322px;
		max-width: 100%;
		max-height: 100%;
	}
</style>
