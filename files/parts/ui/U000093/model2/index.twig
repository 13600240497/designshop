{% set liCol = ['geshop-col-12','geshop-col-6','geshop-col-4','geshop-col-3','geshop-col-2','geshop-col-1'] %}
{% set suffix='px' %}

{% if data.colNum == '1' %}
	{% set colClass = liCol[0] %}
{% elseif data.colNum == '2' %}
	{% set colClass = liCol[1] %}
{% elseif data.colNum == '3' %}
	{% set colClass = liCol[2] %}
{% elseif data.colNum == '4' %}
	{% set colClass = liCol[3] %}
{% elseif data.colNum == '5' %}
	{% set colClass = liCol[4] %}
{% else %}
	{% set colClass = liCol[3] %}
{% endif %}


{% set pageData = {
				price_ft_weight:data.price_ft_weight|default(0),
				base_bg_shadow:data.base_bg_shadow|default(1),
	lang:data.lang|default('en'),
	base_magin_bottom:data.base_magin_bottom|default(32)~suffix,
	base_bgc:data.base_bgc is not null ? data.base_bgc:'#F8F8F8',
	base_bgImage:data.base_bgImage,
	base_bg_shadow_color:data.base_bg_shadow_color is not null ? data.base_bg_shadow_color:'#CCCCCC',
	discount_bgc:data.discount_bgc is not null ? data.discount_bgc:'#FF8A00',
	discount_ftc:data.discount_ftc is not null ? data.discount_ftc:'#FFFFFF',
	buy_ftc:data.buy_ftc is not null ? data.buy_ftc:'#FFFFFF',
	buy_bgc:data.buy_bgc is not null ? data.buy_bgc:'#FF8A00',
	buy_hover_bgc:data.buy_hover_bgc is not null ? data.buy_hover_bgc:'#FCC556',
	buy_hover_ftc:data.buy_hover_ftc is not null ? data.buy_hover_ftc:'#FFFFFF',
	buy_cart_bgc:data.buy_cart_bgc is not null ? data.buy_cart_bgc:'#CC0000',
	buy_cart_hover_bgc:data.buy_cart_hover_bgc is not null ? data.buy_cart_hover_bgc:'#E00101',
	price_fts:data.price_fts|default(22)~suffix,
	price_color:data.price_color is not null ? data.price_color:'#f30240',
	discount_height:data.discount_height|default(50)~suffix,
	discount_width:data.discount_width|default(50)~suffix,
	discount_fts:(data.discount_fts|default(16))~suffix,
	discount_off_fts:(data.discount_off_fts|default(12))~suffix,
	discount_right:(data.discount_right|default(10))~suffix,
	discount_top:(data.discount_top|default(10))~suffix,
	discount_bgImage:data.discount_bgImage,
	buy_text:data.buy_text|default(gb_component_trans(lang , 'buy_now')),
	buy_fts:data.buy_fts|default(18)~suffix,
	discount_active:data.discount_active|default(1),
	goods_title_active:data.goods_title_active|default(1),
	market_active:data.market_active|default(1),
	limit_active:data.limit_active|default(1),
	down_active:data.down_active|default(1),
	limit_type:data.limit_type|default(1),
	down_bgc:data.down_bgc is not null ? data.down_bgc:'#333333',
	down_ftc:data.down_ftc is not null ? data.down_ftc:'#FFFFFF',
	limit_progress_bgc:data.limit_progress_bgc is not null ? data.limit_progress_bgc:'#FF8A00',
	limit_left_color:data.limit_left_color is not null ? data.limit_left_color:'#FF8A00',
	limit_end_active:data.limit_end_active|default(1),
	base_bg_shadow:data.base_bg_shadow|default(0),
	shop_price_weight:data.shop_price_weight|default(0),
	
	kill_title_color:data.kill_title_color is not null ? data.kill_title_color:'#333333',
	kill_statusText_color:data.kill_statusText_color is not null ? data.kill_statusText_color:'#333333',
	kill_time_bgc:data.kill_time_bgc is not null ? data.kill_time_bgc:'#333333',
	kill_time_ft_color:data.kill_time_ft_color is not null ? data.kill_time_ft_color:'#FFFFFF',
	kill_textStatus_line_color:data.kill_textStatus_line_color is not null ? data.kill_textStatus_line_color:'#333333',
	kill_title_text:data.kill_title_text|default('FLASH SALE'),
	kill_title_fts:data.kill_title_fts|default(40)~suffix,
	kill_time_fts:data.kill_time_fts|default(18)~suffix,
	kill_time_radius:data.kill_time_radius|default(4)~suffix,
	base_view_more_url:data.base_view_more_url is not null ? data.base_view_more_url:'',
	base_view_more_color: data.base_view_more_color is not null ? data.base_view_more_color:'#333333',
	base_view_more_hoveC: data.base_view_more_hoveC is not null ? data.base_view_more_hoveC:'#333333',
	base_view_more_fontS: data.base_view_more_fontS|default(20),
	base_view_more_fontW: data.base_view_more_fontW|default(1),
	limit_stock_active: data.limit_stock_active|default(1),
	
	wrapperWidth:1200,
	baseWidth:1000,
	col:4,
	marginRight:12
} %}

{% set liWidth = (pageData.baseWidth-3*pageData.marginRight)/pageData.col %}

<div class="geshop-component-box component-drag geshop-component-goods component-sync clearfix U000093-{{ pageInstanceId }} ui-U000093_model2 geshop-gb-component ui-{{ pageInstanceId }}" data-gid="U000093_model2" data-key="U000093" data-id="{{ pageInstanceId }}"
		 data-editenv="{{ data.isEditEnv }}" data-static-domain="{{ staticDomain }}" data-limitEndActive="{{ pageData.limit_end_active }}" data-buytext="{{ pageData.buy_text }}" data-lang="{{ lang }}"
		 style="{% if data.boxMarginTop %}margin-top: {{ data.boxMarginTop }}px;{% endif %}
			 {% if data.boxMarginBottom %}margin-bottom: {{ data.boxMarginBottom }}px;{% endif %}">
	<!-- embed stylesheet begin -->
	<style type="text/css">
		.geshop-gb-component.U000093-{{ pageInstanceId }} {
			margin-bottom: {{pageData.base_magin_bottom}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .js-addCart {
			background-color: {{pageData.buy_cart_bgc}};
		}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gb_goodsWrap {
			position: relative;
		}
		
		{# view more #}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .view-more-box{
			width: 1000px;
			margin: 0 auto;
			position: relative;
			text-align: right;
			padding-bottom: 16px;
		}

		[data-gid="U000091_default"][data-id="{{ pageInstanceId }}"] .fix-clear {
			clear: both;
		}

		.geshop-gb-component.U000093-{{ pageInstanceId }}  .view-more-box .view-more{
			color: {{pageData.base_view_more_color}};
			font-size: {{pageData.base_view_more_fontS}};
		}
		.geshop-gb-component.U000093-{{ pageInstanceId }}  .view-more-box .view-more:hover {
			color: {{pageData.base_view_more_hoveC}};
		}
		
		{# 折扣标 #}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-discount {
			background-color: {{pageData.discount_bgc}};
			color: {{pageData.discount_ftc}};
			width: {{pageData.discount_width}};
			height: {{pageData.discount_height}};
			top: {{pageData.discount_top}};
			right: {{pageData.discount_right}};
		{% if pageData.discount_bgImage %} background: url({{pageData.discount_bgImage}}) no-repeat center center/100% 100%;
			border-radius: 0;
		{% endif %}
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-discount span {
			font-size: {{pageData.discount_fts}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-discount .curtoff-text {
			font-size: {{pageData.discount_off_fts}};
		}
		
		{# 售价 #}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-price .gs-shop-price {
			font-size: {{pageData.price_fts}};
			color: {{pageData.price_color}};
		}
		
		{% if pageData.shop_price_weight == '1' %}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-price .gs-shop-price strong {
			font-weight: bold;
		}
		{% endif %}

		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-item-common {
			display: block;
			overflow: hidden;
			text-align: center;
			height: 322px;
		}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-item-common img {
			height: 322px;
			max-width: 100%;
			max-height: 100%;
		}
		
		{# 购买按钮设置 #}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-buy .buyLink {
			color: {{pageData.buy_ftc}};
			background-color: {{pageData.buy_bgc}};
			font-size: {{pageData.buy_fts}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-buy .js-addCart {
			background-color: {{pageData.buy_cart_bgc}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-buy .buyLink:hover {
			color: {{pageData.buy_hover_ftc}};
			background-color: {{pageData.buy_hover_bgc}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-buy .js-addCart:hover {
			background-color: {{pageData.buy_cart_hover_bgc}};
		}
		
		{# 库存设置 #}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .process-inner {
			background: {{pageData.limit_progress_bgc}};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .goods-limit-tips .num {
			color: {{pageData.limit_left_color}};
		}
		
		{# 倒计时设置 #}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-goods-time {
			background-color: {{pageData.down_bgc}};
			color: {{pageData.down_ftc}};
			display:none;
		}
		
		{# 秒杀配置#}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gb-kill-title {
			font-size: {{ pageData.kill_title_fts }};
			line-height:{{ pageData.kill_title_fts }};
			color: {{ pageData.kill_title_color }};
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gb-kill-statusText {
			color: {{ pageData.kill_statusText_color }};
		}
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gb-kill-statusText:before,	.geshop-gb-component.U000093-{{ pageInstanceId }} .gb-kill-statusText:after{
			background-color: {{ pageData.kill_textStatus_line_color }}
		}
		
		.geshop-gb-component.U000093-{{ pageInstanceId }} .gs-kill-down em {
			font-size: {{ pageData.kill_time_fts }};
			border-radius: {{ pageData.kill_time_radius }};
			background-color: {{ pageData.kill_time_bgc }};
			color:{{ pageData.kill_time_ft_color }}
		}

{% if pageData.base_bg_shadow == '0'%}
.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item,.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item_tag {
	box-shadow: none;
}

{% else %}
.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item,.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item_tag {
	box-shadow: 0px 0px 10px {{data.base_bg_shadow_color|default('#CCCCCC')}};
	-webkit-box-shadow: 0px 0px 10px {{data.base_bg_shadow_color|default('#CCCCCC')}};
}

{% endif %}
</style>
	<!-- embed stylesheet end -->
	
	<div class="geshop-col-12">
		
		<div class="gb_goodsWrap gb_wrapper_common" data-skus="{{ data.goodsSKUList }}" data-isEditEnv="{{ data.isEditEnv }}"
				 style="margin:auto;padding: 50px 0 38px;
					 {% if data.baseFtFa %}font-family:{{ data.baseFtFa }};{% endif %}">
			{# total time #}
			<div class="gb-kill-warp">
				<div class="gb-kill-title">{{ pageData.kill_title_text }}</div>
				<div class="gb-kill-statusText">{{ GlobalLanguages.ends_in|default('Ends In')}}</div>
				<div class="gb-kill-time">
					<div class="gs-kill-down" data-begin="{{ data.down_timestamp_start|default(0) }}" data-end="{{ data.down_timestamp_end|default(0) }}"><em>00</em>:<em>00</em>:<em>00</em>:<em>00</em></div>
				</div>
			</div>
			{# total time end #}
			{# felix #}
			<ul class="clearfix gb-list-default gb-global-wrapper" style="width:{{ pageData.baseWidth }}{{ suffix }}">
				
				{% for key,item in data.goodsInfo|default(0..3) %}
					{{ include ('@app/files/parts/temp/gb/index_default_test.twig') }}
				{% endfor %}
			</ul>
			{% if pageData.base_view_more_url %}
				<div class="view-more-box">
					<a class="view-more"  target="_blank" style="{% if pageData.base_view_more_fontW == '1'%} font-weight:600 {% endif %}" href="{{pageData.base_view_more_url}}">{{ gb_component_trans(lang , 'view_more') }} ></a>
				</div>
			{% endif %}
		</div>
		<div class="fix-clear"></div>
	</div>
</div>

