<!-- embed stylesheet begin -->
    <style type="text/css">
        .geshop-gb-component.ui-{{ pageInstanceId }}{
            margin-bottom:{{pageData.base_magin_bottom}};
            margin-top:{{pageData.base_magin_top}};
        }


        .geshop-gb-component.ui-{{ pageInstanceId }} .gb_goodsWrap{
            position: relative;
        }


        .geshop-gb-component.ui-{{ pageInstanceId }} .gb_goodsWrap .gb-list-default {
            margin-right: -0.5667rem !important;
        }

        {# 折扣标 #}
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount--m{
            background-color:{{pageData.discount_bgc}};
            color:{{pageData.discount_ftc}};
            width:{{pageData.discount_width}};
            height:{{pageData.discount_height}};
            top:{{pageData.discount_top}};
            right:{{pageData.discount_right}};
            {% if pageData.discount_bgImage %}
                background:url({{pageData.discount_bgImage}}) no-repeat center center/100% 100%;
                border-radius:0;
            {% endif %}
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount--m .curtoff-box{
            font-size:{{pageData.discount_fts}};
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-discount--m .curtoff-text{
            font-size:{{pageData.discount_off_fts}};
        }
        {# 售价 #}
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-price--m .gs-shop-price{
                font-size:{{pageData.price_fts}};
                color:{{pageData.price_color}};
        }

        {# 购买按钮设置 #}
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy--m .buyLink{
            color:{{pageData.buy_ftc}};
            background-color:{{pageData.buy_bgc}};
            font-size:{{pageData.buy_fts}};
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .isHide{
            display:none;
            height:0;
            opacity:0;
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .view-more-btn{
            color:{{pageData.view_more_ftc}};
            border-color:{{pageData.view_more_bdc}} !important;
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-title a{
            color:#333 !important;
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-item-common {
        position: relative;
        width: 4.2rem;
        height: 5.6rem;
        text-align: center;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        }
        .geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-item-common img {
        display: block;
        width: 100%;
        height: 100%;
        }

				{# view 按钮样式 #}
				.geshop-gb-component.ui-{{ pageInstanceId }} .view-more{
					min-height:{{2 * pageData.view_all_fts}}rem;
				}
				.geshop-gb-component.ui-{{ pageInstanceId }} .view-more-btn{
					margin-top:{{pageData.view_all_fts - pageData.view_more_fts}}rem;
					color:{{pageData.view_more_ftc}};
					background-color:{{pageData.view_more_bgc}};
					line-height: {{ pageData.view_all_fts - pageData.view_more_fts > 0 ? 1.5 * pageData.view_all_fts : 1.5 * pageData.view_more_fts }}rem;
					font-size:{{pageData.view_more_fts}}rem;
					border-radius: {{pageData.view_more_radius}};
					border: 1px solid {{pageData.view_more_border_color}};
				}
				
				.geshop-gb-component.ui-{{ pageInstanceId }} .view-all-btn{
					color:{{pageData.view_all_ftc}};
					line-height: {{ pageData.view_all_fts - pageData.view_more_fts > 0 ? 1.5 * pageData.view_all_fts : 1.5 * pageData.view_more_fts }}rem;
					font-size:{{pageData.view_all_fts}}rem;
				{% if pageData.view_all_weight %}
					font-weight: bold;
				{% endif %}
				}
    </style>
<!-- embed stylesheet end -->
