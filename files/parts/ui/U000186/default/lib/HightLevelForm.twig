<h4 class="column-title"><i class="layui-icon back" id="js_advanced_baseConfig">&#xe603;</i>返回</h4>
<h5 class="column-title">高级配置</h5>

<div class="layui-collapse">

    <div class="layui-collapse">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">导航栏边距设置</h2>
            <div class="layui-colla-content layui-show">
                {% set componentsData = [
                    {
                        label: '菜单高度(px)',
                        name: 'nav_h',
                        default: 60,
                        default_m: 60,
                        col:2
                    },
                    {
                        label: '菜单边距(px)',
                        name: 'nav_gap',
                        default: 40,
                        default_m: 40,
                        col:2
                    }
                ] %}
                <div class="layui-row layui-col-space20">
                    {% include '@app/files/parts/formTemplate/components/platData-dl.twig' with{'componentsData':componentsData} %}
                </div>
            </div>

            <h2 class="layui-colla-title">文字配置</h2>
            <div class="layui-colla-content layui-show">
                {% set componentsData = [
                    {
                        label: '文字大小(px)',
                        name: 'font_size',
                        default: 15,
                        default_m: 15,
                        col:2
                    }
                ] %}
                <div class="layui-row layui-col-space20">
                    {% include '@app/files/parts/formTemplate/components/platData-dl.twig' with{'componentsData':componentsData} %}
                </div>
            </div>
        </div>
    </div>
</div>
