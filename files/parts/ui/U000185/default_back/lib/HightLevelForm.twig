<h4 class="column-title"><i class="layui-icon back" id="js_advanced_baseConfig">&#xe603;</i>返回</h4>
<h5 class="column-title">高级配置</h5>
<div class="layui-collapse">


    <div class="layui-collapse">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">基础配置</h2>
            <div class="layui-colla-content layui-show">
                 <div class="layui-row layui-col-space10">
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="form-item-label">上内边距(px)</label>
                            <div class="layui-input-block">
                                <input type="text" name="paddingTop" autocomplete="off" class="layui-input" value="{{ data.paddingTop | default(20) }}">
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="form-item-label">下内边距(px)</label>
                            <div class="layui-input-block">
                                <input type="text" name="paddingBottom" autocomplete="off" class="layui-input" value="{{ data.paddingBottom | default(20) }}">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">背景图片</label>
                    <div class="layui-input-block">
                        <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
                        <input class="layui-input" type="text" name="bgImg" value="{{data.bgImg|default('')}}">
                    </div>
                </div>
            </div>

            <h2 class="layui-colla-title">标题配置</h2>
            <div class="layui-colla-content layui-show">
                <div class="layui-form-item">
                    <label class="form-item-label">文字大小(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="titleFontSize" autocomplete="off" class="layui-input" value="{{ data.titleFontSize | default(34) }}">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">
                        文字粗细</label>
                    <div class="layui-input-block">
                        <input type="radio" name="titleFontWeightBold" value="0" {% if data.titleFontWeightBold|default(1) == 0 %} checked{% endif %} title="正常">
                        <input type="radio" name="titleFontWeightBold" value="1" {% if data.titleFontWeightBold|default(1) == 1 %} checked{% endif %} title="加粗">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">左图片</label>
                    <div class="layui-input-block">
                        <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
                        <input class="layui-input" type="text" name="leftBgImg" value="{{data.leftBgImg|default('')}}">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">右图片</label>
                    <div class="layui-input-block">
                        <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
                        <input class="layui-input" type="text" name="rightBgImg" value="{{data.rightBgImg|default('')}}">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">标题左右边距(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="titlePadding" autocomplete="off" class="layui-input" value="{{ data.titlePadding | default(16) }}">
                    </div>
                </div>

            </div>


            <h2 class="layui-colla-title">链接配置</h2>
            <div class="layui-colla-content layui-show">
                 <div class="layui-form-item">
                    <label class="form-item-label">上边距(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="linkPaddingTop" autocomplete="off" class="layui-input" value="{{ data.linkPaddingTop | default(10) }}">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">文字大小(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="linkFontSize" autocomplete="off" class="layui-input" value="{{ data.linkFontSize | default(12) }}">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="form-item-label">
                        文字粗细</label>
                    <div class="layui-input-block">
                        <input type="radio" name="linkFontWeightBold" value="0" {% if data.linkFontWeightBold|default(0) == 0 %} checked{% endif %} title="正常">
                        <input type="radio" name="linkFontWeightBold" value="1" {% if data.linkFontWeightBold|default(0) == 1 %} checked{% endif %} title="加粗">
                    </div>
                </div>
            </div>

            <h2 class="layui-colla-title">横线配置</h2>
            <div class="layui-colla-content layui-show">
                <div class="layui-form-item">
                    <label class="form-item-label">上边距(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="shortLinePaddingTop" autocomplete="off" class="layui-input" value="{{ data.shortLinePaddingTop | default(15) }}">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="form-item-label">横线高度(px)</label>
                    <div class="layui-input-block">
                        <input type="text" name="shortLineHeight" autocomplete="off" class="layui-input" value="{{ data.shortLineHeight | default(5) }}">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="form-item-label">横线颜色</label>
                    <div class="layui-input-block">
                        {{
                            include ('lib/ColorPicker.twig', {
                                'cmpt_name': 'shorLineBgColor',
                                'cmpt_value': data.shorLineBgColor,
                                'cmpt_default': '#000000'
                            })
                        }}
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
