.geshop-U000190-default-{{ pageInstanceId }}{
    background-color: {{data.componentBgColor |default('#F8F8F8')}};
    margin-bottom: {{data.box_margin_bottom | default(32)}}px;
    overflow: hidden;
} 
    
.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-discount {
    position:absolute;
    z-index: 1;
    display:flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    align-content: center;
    text-align: center;
    line-height: {{data.offFontSize | default(12)}}px;
    font-size: {{data.offFontSize | default(12)}}px;
    width: {{ data.discountwidth | default(50) }}px;
    height: {{ data.discountHeight | default(50) }}px;
    background-color: {{ data.discountBgColor | default('#000') }} ;
    color: {{ data.discountFontColor | default('#fff') }} ;
    {% if data.discountBgImg  %}
        background-image: url({{ data.discountBgImg }});
    {% endif %}
    right: {{data.discountLeft | default(0)}}px;
    top: {{data.discountTop | default(0)}}px;
    background-size: 100% 100%;
    {% if data.discountBgImg %}  border-radius:0%;  {% else %} border-radius:50%; {% endif %}
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-discount p{
    width: {{ data.discountwidth}}px;
    line-height: 17px;
    margin: 0 0 0 {{data.discountTextLeft | default(0)}}px;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-discount p.geshop-goods-discount-offtext{
    font-size: {{data.offFontSize | default(12)}}px;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-discount p.geshop-goods-discount-value {
    font-size: {{data.discountFontSize | default(15)}}px;
    margin-top: {{data.discountTextTop | default(0)}}px;
    font-family: LatoBold;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-img .shop-now-container {
    position: absolute;
    left: 0;
    top: 0;
    color: {{data.shopNowFontColor | default('#000000')}};
    font-size: {{data.shopNowFontSize | default(16) }}px;
    opacity: 0.75;
    background-color: {{data.btnBgColor | default('#ffffff')}};
    width: 100%;
    height: 100%;
    display: none;
    box-sizing: border-box;
    border-color: {{data.btnBorderColor | default('#000')}};
    border-style: solid;
    border-width: 2px;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-img .shop-now-container .shop-now-text {
    color: {{data.shopNowFontColor | default('#000000') }};
    font-size: {{data.shopNowFontSize | default(16) }}px;
}
    
.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-img a .inner-wrapper .bag-img{
    background-image: url({{data.shopIconImg | default('https://geshoptest.s3.amazonaws.com/uploads/OmoKtEqZh8027cfkU56VTJaYi1WSIXRQ.png')}});
    width: 22px;
    height: 22px;
    background-size: 100% 100%;
    display: inline-block;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-shopprice {
    color: {{data.shopPriceBgColor | default('#FF4545') }};
    font-size: {{data.shopPriceFontSize|default(16)}}px;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-goods-promotions-more>em{
    color: {{data.saleInfoFontColor | default('#000000') }};
}

.geshop-U000190-default-{{ pageInstanceId }}  .geshop-goods-market-price {
    color: {{data.originalPriceColor | default('#BCBCBC') }}; 
    font-size: {{data.originalPriceFontSize | default(14) }}px;
}

.geshop-U000190-default-{{ pageInstanceId }} .geshop-marketprice-title {
    font-size: {{data.originalPriceTitleFontSize | default(14)}}px;
    color: {{data.originalPriceTitleColor | default('#BCBCBC') }};
}
