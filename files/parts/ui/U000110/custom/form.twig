<script>
    function onSubmit(progress) {
        var $input = $('input[name=show_goods_number]'),
            _val = $.trim($input.val());
        if (_val != '') {
            if (!/^([1-9][0-9]*)$/.test(_val) || _val <= 1) {
                layer.msg('请输入为大于1的整数');
                $input.val('');
                return false;
            };
        }
        progress.next();
    }

</script>
