{%
	set pageData = {
    repeatBgColor:data.repeatBgColor is not null?data.repeatBgColor:'#FDFDFD',
		repeatBorderColor:data.repeatBorderColor is not null?data.repeatBorderColor:'#DBDBDB',
    repeatTextColor:data.repeatTextColor is not null?data.repeatTextColor:'#333333',
  
		bgColor:data.bgColor is not null?data.bgColor:'#FDFDFD',
		hoverBgColor:data.hoverBgColor is not null?data.hoverBgColor:'#333333',
    fontColor:data.fontColor is not null?data.fontColor:'#333333',
    hoverFontColor:data.hoverFontColor is not null?data.hoverFontColor:'#FFFFFF',

    colBgColor:data.colBgColor is not null?data.colBgColor:'#FFFFFF',
		colHoverBgColor:data.colHoverBgColor is not null?data.colHoverBgColor:'#333333',
    colFontColor:data.colFontColor is not null?data.colFontColor:'#333333',
    colHoverFontColor:data.colHoverFontColor is not null?data.colHoverFontColor:'#FFFFFF',
    colBorderColor:data.colBorderColor is not null?data.colBorderColor:'#DBDBDB',
    colBorderColorHover:data.colBorderColorHover is not null?data.colBorderColorHover:'#333333',

    fontSize:data.fontSize|default(28),        
    navHeight:data.navHeight|default(88),
    navGap:data.navGap|default(1), 
    btnBgColor:data.btnBgColor is not null ? data.btnBgColor:'#FFFFFF',
    btnIconColor:data.btnIconColor is not null ? data.btnIconColor:'#333333',
    btnBorderColor:data.btnBorderColor is not null ? data.btnBorderColor:'#C8C8C8',
    downUnSelectBdColor: data.downUnSelectBdColor is not null ? data.downUnSelectBdColor:'#d8d8d8',
    downSelectBdColor: data.downSelectBdColor is not null ? data.downSelectBdColor:'#333333'
	}
%}

<style>
  .geshop-title {
    font-size:16px;
    margin-left:40px;
    margin-top:15px;
  }
</style>

<div class='design-form design-form-component design-form-visible'>
  <h3 class='component-form-title'>水平导航组件配置
    <a href="javascript:;" class="design-form-close js_closeDesignForm icon-close">
      <i class="el-icon-close"></i>
    </a>
  </h3>
  <blockquote class="component-form-quote">切换模板后，无蓝色标识的配置数据将被重置</blockquote>
  <div class="component-form-setting-item component-form-configure-item activity-component-from-item">
    <div class="layui-tab">
      <ul class="layui-tab-title">
        <li class="layui-this">模板选择</li>
        <li>样式配置</li>
      </ul>
      <div class="layui-tab-content layui-tab-content-parent">
        <div class="layui-tab-item layui-show">
                    <style> {{ include('@app/htdocs/resources/stylesheets/form-less-module/theme.css') }} </style>
                    {{ include ('@app/files/parts/formTemplate/components/theme.twig') }}
                </div>
        <div class="layui-tab-item">
          <div class="layui-carousel" id="form_carousel">
            <div carousel-item>
              <div>
                <fieldset class="layui-elem-field">
                  <legend>常用配置<span style="color:#A4A4A4;font-size:16px;"> (此组件只适用于通栏)</span></legend>
                  <div class="layui-field-box">
                    <p class="geshop-title">默认平铺配置</p>
                    <div class="layui-form-item" style="margin-top:10px;">
                      <label class="layui-form-label">背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="repeatBgColor"><div style="background-color:{{ pageData.repeatBgColor }};"></div></div>
                        <input type="text" class="layui-input" name="repeatBgColor" autocomplete="off" value="{{ pageData.repeatBgColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">边框颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="repeatBorderColor"><div style="background-color:{{ pageData.repeatBorderColor }};"></div></div>
                        <input type="text" class="layui-input" name="repeatBorderColor" autocomplete="off" value="{{ pageData.repeatBorderColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文字颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="repeatTextColor"><div style="background-color:{{ pageData.repeatTextColor }};"></div></div>
                        <input type="text" class="layui-input" name="repeatTextColor" autocomplete="off" value="{{ pageData.repeatTextColor }}">
                      </div>
                    </div>
                    <p class="geshop-title">横向排列配置</p>
                    <div class="layui-form-item" style="margin-top:10px;">
                      <label class="layui-form-label">未选中状态背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="bgColor"><div style="background-color:{{ pageData.bgColor }};"></div></div>
                        <input type="text" class="layui-input" name="bgColor" autocomplete="off" value="{{ pageData.bgColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">选中状态背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="hoverBgColor"><div style="background-color:{{ pageData.hoverBgColor }};"></div></div>
                        <input type="text" class="layui-input" name="hoverBgColor" autocomplete="off" value="{{ pageData.hoverBgColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">未选中状态文字颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="fontColor"><div style="background-color:{{ pageData.fontColor }};"></div></div>
                        <input type="text" class="layui-input" name="fontColor" autocomplete="off" value="{{ pageData.fontColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">激活状态字体颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="hoverFontColor">
                          <div style="background-color:{{ pageData.hoverFontColor }};"></div>
                        </div>
                        <input type="text" class="layui-input" name="hoverFontColor" autocomplete="off" value="{{ pageData.hoverFontColor }}">
                      </div>
                    </div>
                    <p class="geshop-title">横向排列下拉配置</p>
                    <div class="layui-form-item" style="margin-top:10px;">
                      <label class="layui-form-label">未选中状态背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="colBgColor"><div style="background-color:{{ pageData.colBgColor }};"></div></div>
                        <input type="text" class="layui-input" name="colBgColor" autocomplete="off" value="{{ pageData.colBgColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">选中状态背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="colHoverBgColor"><div style="background-color:{{ pageData.colHoverBgColor }};"></div></div>
                        <input type="text" class="layui-input" name="colHoverBgColor" autocomplete="off" value="{{ pageData.colHoverBgColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">未选中状态文字颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="colFontColor"><div style="background-color:{{ pageData.colFontColor }};"></div></div>
                        <input type="text" class="layui-input" name="colFontColor" autocomplete="off" value="{{ pageData.colFontColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">选中状态字体颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="colHoverFontColor">
                          <div style="background-color:{{ pageData.colHoverFontColor }};"></div>
                        </div>
                        <input type="text" class="layui-input" name="colHoverFontColor" autocomplete="off" value="{{ pageData.colHoverFontColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">选中边框颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="downSelectBdColor"><div style="background-color:{{ pageData.downSelectBdColor }};"></div></div>
                        <input type="text" class="layui-input" name="downSelectBdColor" autocomplete="off" value="{{ pageData.downSelectBdColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">未选中边框颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="downUnSelectBdColor"><div style="background-color:{{ pageData.downUnSelectBdColor }};"></div></div>
                        <input type="text" class="layui-input" name="downUnSelectBdColor" autocomplete="off" value="{{ pageData.downUnSelectBdColor }}">
                      </div>
                    </div>
                    <div class="layui-form-item" style="padding-left:40px !important;">
                      <label class="layui-form-label public-data">可选导航菜单</label>
                      <div class="layui-input-block">
                        {% if data.navData %}
                        {% for id,item in data.navData %}
                        <input type="checkbox" name="nav_menu" value="{{ id }}" lay-skin="primary" title="{{ item }}" {% if id in data.nav_menu %} checked {% endif %} data-public-tag="true"><br />
                        {% endfor %}
                        {% endif %}
                      </div>
                      <input type="checkbox" lay-filter="check_all" data-name="nav_menu" lay-skin="primary" title="全选">
                    </div>
                  </div>
                </fieldset>
                <div class="text-right">
                  <button type="button" id="js_moreConfig" class="layui-btn layui-btn-normal layui-btn-sm">更多配置</button>
                </div>
              </div>
              <div>
                <div class="layui-tab layui-tab-vertical">
                  <ul class="layui-tab-title">
                    <li class="layui-this">基础配置</li>
                    <li>下拉按钮配置</li>
                  </ul>
                  <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                      <div class="layui-form-item">
                        <label class="layui-form-label">字体大小(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="fontSize" autocomplete="off" class="layui-input" value={{ pageData.fontSize }}>
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">导航菜单高度(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="navHeight" autocomplete="off" class="layui-input" value={{ pageData.navHeight }}>
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">导航菜单间距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="navGap" autocomplete="off" class="layui-input" value={{ pageData.navGap }}>
                        </div>
                      </div>
                    </div>
                    <div class="layui-tab-item">
                      <div class="layui-form-item">
                        <label class="layui-form-label">背景颜色</label>
                        <div class="layui-input-block">
                          <div class="color-picker-selector" data-hidden-name="btnBgColor"><div style="background-color:{{ pageData.btnBgColor }};"></div></div>
                          <input type="text" class="layui-input" name="btnBgColor" autocomplete="off" value="{{ pageData.btnBgColor }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">图标颜色</label>
                        <div class="layui-input-block">
                          <div class="color-picker-selector" data-hidden-name="btnIconColor"><div style="background-color:{{ pageData.btnIconColor }};"></div></div>
                          <input type="text" class="layui-input" name="btnIconColor" autocomplete="off" value="{{ pageData.btnIconColor }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">边框颜色</label>
                        <div class="layui-input-block">
                          <div class="color-picker-selector" data-hidden-name="btnBorderColor"><div style="background-color:{{ pageData.btnBorderColor }};"></div></div>
                          <input type="text" class="layui-input" name="btnBorderColor" autocomplete="off" value="{{ pageData.btnBorderColor }}">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <button type="button" id="js_baseConfig" class="layui-btn layui-btn-normal layui-btn-sm">基础配置</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="layui-form-item geshop-form-operation">
  <button type="button" class="layui-btn layui-btn-primary js_closeDesignForm">取消</button>
  <button type="button" class="layui-btn layui-btn-normal js_submitDesignForm">提交</button>
</div>
