{% if data.swiper_right_image %}
    {{ body }} .swiper-button-next{
        background-image: url({{ data.swiper_right_image }}) !important;
    }
{% endif %}


{{ body }} .goods-buy-buttom:hover{
    background-color:{{ data.buy_hover_bg_color|default('#000000') }};
    color:{{ data.buy_hover_text_color|default('#ffffff') }}
}


}

