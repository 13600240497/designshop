{% set space = '#U000182_'~pageInstanceId %}
{% set body = space~' .geshop-U000182-template2_v2-body' %}

{# 三端共有样式 #}
{{space}} .geshop-U000182-template2_v2-body{
margin-top: {{data.box_margin_top | default(0)}}px;
margin-bottom: {{data.box_margin_bottom | default(32)}}px;
background-color:{{ data.box_bg_color | default('#F8F8F8') }};
}

{{ space }} .goods-buy-buttom{
background-color:{{ data.buy_bg_color|default('#000000') }};
color:{{ data.buy_text_color|default('#FFFFFF') }};
}

{{ body }} .geshop-components-discount{
background-color:{{ data.discount_bg_color|default('#151515') }};
color:{{ data.discount_text_color|default('#333333') }};
background-position: center center;
background-size: contain;
background-repeat: no-repeat;
}


{{ body }} .geshop-components-discount *{
    color:inherit;
}

{{ body }} .swiper-slide{
    width:33.33%;
    display:inline-block;
    float:left;
}

{{ space }} .shop_price_color{
    color:{{ data.shop_price_color|default('#ff4545') }};
}


{# PC 模式 #}
@media screen and (min-width: 1025px) {

{{ body }} {
    margin-top: {{data.box_margin_top | default(0)}}px;
    margin-bottom: {{data.box_margin_bottom | default(32)}}px;
}

