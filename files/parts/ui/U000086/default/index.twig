{%
	set pageData = {
		height:data.height is not null?data.height:200,
		boxMarginBottom:data.boxMarginBottom is not null?data.boxMarginBottom:24,
		textTitle:data.textTitle is not null?data.textTitle:'CODE',
    textCode:data.textCode is not null?data.textCode:'SCHOOL',
		textMarginTop:data.textMarginTop is not null?data.textMarginTop:90,
		fontSize:data.fontSize is not null?data.fontSize:'30',
		textColor:data.textColor is not null?data.textColor:'#333333',
		copyBtnIsVisible:data.copyBtnIsVisible is not null?data.copyBtnIsVisible:'2',
		bgColor:data.bgColor is not null?data.bgColor:'#F5F7F9',
		btnfontSize:data.btnfontSize is not null?data.btnfontSize:'20',
		btnWidth:data.btnWidth is not null?data.btnWidth:'160',
		btnHeight:data.btnHeight is not null?data.btnHeight:'40',
		copyCodeText:data.copyCodeText is not null?data.copyCodeText:'Copy Code',
		copyCodeTextColor:data.copyCodeTextColor is not null?data.copyCodeTextColor:'#000000',
		copyCodeBgColor:data.copyCodeBgColor is not null?data.copyCodeBgColor:'#D8D8D8',
		btnBgImg:data.btnBgImg is not null?data.btnBgImg:'',
		copyCodeVisitedText:data.copyCodeVisitedText is not null?data.copyCodeVisitedText:'Copied!',
		copyCodeVisitedTextColor:data.copyCodeVisitedTextColor is not null?data.copyCodeVisitedTextColor:'#9B9B9B',
		copyCodeVisitedBgColor:data.copyCodeVisitedBgColor is not null?data.copyCodeVisitedBgColor:'#D8D8D8',

	}
%}
<div class="geshop-component-box component-drag" data-gid="U000086" data-key="U000086" data-id="{{ pageInstanceId }}" data-static-domain="{{ staticDomain }}" attr="nav_flag">
	<div class="coupon-default-container" style="
		{% if pageData.height %}height: {{ pageData.height }}px;{% endif %}
		{% if pageData.boxMarginBottom %}margin-bottom: {{ pageData.boxMarginBottom }}px;{% endif %}
		{% if data.bgImage %}background-image: url({{ data.bgImage }});{% else %}background-image:url({{ data.default.coupon }});{% endif %}
		{% if pageData.bgColor %}background-color: {{ pageData.bgColor }};{% endif %}
		
	">
		<p class="coupon-default-text" style="
			{% if pageData.fontSize %}font-size: {{ pageData.fontSize }}px;{% endif %}
			{% if pageData.fontSize %}line-height: {{ pageData.fontSize }}px;{% endif %}
			{% if pageData.textColor %}color: {{ pageData.textColor }};{% endif %}
			{% if pageData.textMarginTop %}margin-top: {{ pageData.textMarginTop }}px;{% endif %}
		">{{ pageData.textTitle }}: {{ pageData.textCode }}</p>
		<input type="hidden" value="{{ pageData.textCode }}" />
		<a href="javascript:;" class="coupon-default-btn js_copyBtn btn__site-default"
		 data-clipboard-text="{{ pageData.textCode }}"
		 {% if pageData.copyCodeVisitedText %}data-visitedtext="{{ pageData.copyCodeVisitedText }}"{% endif %}
		 {% if pageData.copyCodeVisitedTextColor %}data-visitedtextcolor="{{ pageData.copyCodeVisitedTextColor }}"{% endif %}
		 {% if pageData.copyCodeVisitedBgColor %}data-visitedbgcolor="{{ pageData.copyCodeVisitedBgColor }}"{% endif %}
		 style="
			{% if pageData.copyBtnIsVisible == 2 %}display:none;{% endif %}
			{% if pageData.btnfontSize %}font-size: {{ pageData.btnfontSize }}px;{% endif %}
			{% if pageData.btnWidth %}width: {{ pageData.btnWidth }}px;{% endif %}
			{% if pageData.btnHeight %}height: {{ pageData.btnHeight }}px;{% endif %}
			{% if pageData.btnHeight %}line-height: {{ pageData.btnHeight }}px;{% endif %}
			{% if pageData.copyCodeTextColor %}color: {{ pageData.copyCodeTextColor }};{% endif %}
			{% if pageData.copyCodeBgColor %}background-color: {{ pageData.copyCodeBgColor }};{% endif %}
			{% if pageData.btnBgImg %}background-image: url({{ pageData.btnBgImg }});{% endif %}
		">
			{% if pageData.copyCodeText %}{{ pageData.copyCodeText }}{% endif %}
		</a>
	</div>
</div>
