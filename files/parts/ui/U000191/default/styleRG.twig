<!-- embed stylesheet begin -->
{#站点兼容#}
{% set siteData = {
    price_color: 'rg' in siteCode ? '#FA386A' : null,
} %}
{% set root = '.geshop-U000191-default-'~pageInstanceId %}

<style type="text/css">
{% set list_width = data.row_num | default(2) * 267 + 20 %}
.geshop-U000191-default-{{ pageInstanceId }}{
	margin-top: {{data.component_margin_top | default(0)}}px;
	margin-bottom: {{data.component_margin_bottom | default(32)}}px;
}
{{ root }} .combo-container{
	width: {{list_width}}px;
	{# width: {{data.component_width | default(600)}}px;
	height: {{data.component_height | default(578)}}px;
	background-color: {{data.component_bgColor | default('#f8f8f8') }};
	{% if data.component_bgImage %} background-image: url({{data.component_bgImage}});{% endif %} #}
	{% if data.component_align == 'right' | default('center') %}
		float: right;
	{% elseif data.component_align == 'left'  | default('center') %}
		float: left;
	{% else %}
		margin: 0 auto;
	{% endif %}

}
{{ root }}  .combo-container  .cart-wrap{
	background-color: {{data.buyarea_bgColor | default('#333333')}};
}
{{ root }}  .combo-container  .cart-wrap .goods-list{

}
{{ root }}  .combo-container .cart-wrap .group-price{
	color: {{data.total_price_Color | default('#FFFFFF')}};
	text-shadow: 0 -3px 0 {{data.buyarea_bgColor | default('#333333')}}, -3px 0 0 {{data.buyarea_bgColor | default('#333333')}}, 3px 0 0 {{data.buyarea_bgColor | default('#333333')}}, 0 -3px 0 {{data.buyarea_bgColor | default('#333333')}};
}
{{ root }}  .combo-container .cart-wrap .total-price{
	color: {{data.total_originalprice_color | default('#FFFFFF')}};
}
{{ root }}  .combo-container .cart-wrap .cart-btn-wrap{
	border-radius: {{data.btn_borderRadius | default(30) }}px;
	background-color: {{data.cart_btn_bgColor | default('#FFFFFF')}};
	{% if data.cart_bgImage %}
		background-image: url({{data.cart_bgImage}})
	{% endif %}
}
{{ root }}  .combo-container .cart-wrap .cart-btn-wrap .ico-cart{
	background-image: url({{data.cart_image | default('https://geshoptest.s3.amazonaws.com/uploads/6QC3mEOrSG0ghkdDo2pKsPLBcvVZnXw7.png')}})
}
{{ root }}  .combo-container .cart-wrap .cart-btn-wrap .cart-text{
	color: {{data.buyBtn_fontColor | default('#333333')}};
}
{{ root }}  .combo-container .goods-list li .attribute-wrap{
	background-color: {{data.dropdown_bgColor | default('#F5F5F5')}};
}

{{ root }}  .combo-container .goods-list li .attribute-wrap:hover .arrows, {{ root }}  .combo-container .goods-list li .attribute-wrap .arrows.on {
	border:1px solid {{siteData.price_color | default('#F5F5F5')}};
}

{{ root }}  .combo-container .goods-list li .attribute-wrap .attribute-text{
	color: {{data.dropdown_fontColor | default('#333333')}};
}
{{ root }}  .combo-container .goods-list li .attribute-wrap .arrows::after {
	border-top: 1px solid {{data.dropdown_fontColor | default('#333333')}};
  	border-right: 1px solid {{data.dropdown_fontColor | default('#333333')}};
}
{{ root }}  .combo-container .combo-wrap .goods-list li .attribute-wrap .attribute-list{
	background-color: {{data.dropdown_bgColor | default('#F5F5F5')}};
	border: 1px solid {{data.dropdown_borderColor | default('#F5F5F5')}};
}
{{ root }}  .combo-container .combo-wrap .goods-list li .attribute-wrap .attribute-list::after{
	 border-top: 1px solid {{data.dropdown_borderColor | default('#FFFFFF')}};
   border-right: 1px solid {{data.dropdown_borderColor | default('#FFFFFF')}};
	 background-color: {{data.dropdown_bgColor | default('#e6e6e6')}};
}
{{ root }}  .combo-container .combo-wrap .goods-list li .attribute-wrap .attribute-list p:hover{
	background-color: {{data.dropdown_hover_bgColor | default('#FFFFFF')}};
	color: {{ data.dropdown_hover_fontColor ?? '#333333' }};
}
{{ root }} .combo-container .combo-wrap .goods-list li .price-wrap .price{
	color: {{data.shopprice_color | default(siteData.price_color|default('#000000'))}};
}
{{ root }}  .combo-container .combo-wrap .goods-list li .attribute-wrap .attribute-list p{
	color: {{data.dropdown_fontColor | default('#333333')}}
}

{{ root }}  .combo-container .combo-wrap .goods-list{
	width: {{list_width | default(552)}}px;
	background-color: {{ data.box_bg_color|default('#F8F8F8') }};
}
{{ root }}  .combo-container .combo-wrap .cart-wrap{
	width: {{list_width}}px;
}

</style>
<!-- embed stylesheet end -->
