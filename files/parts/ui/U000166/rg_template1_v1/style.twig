{% set root = '#U000166_'~pageInstanceId %}
{% set classSpace = '.geshop_u000166_rg_template1_v1_body' %}
{% set body = root~' '~classSpace %}
{% set suffix = 'rem' %}
{% set remUnit = '75' %}

{{ body }} {
margin-bottom: {{ (data.box_margin_bottom|default(32))/remUnit }}{{ suffix }};
background-color: {{ data.box_bg_color|default('#F8F8F8') }};
}


{{ body }} .list_item{
border-radius: {{ (data.goods_border_radius|default(2))/remUnit }}{{ suffix }};
border: 1px solid {{ data.hover_bdColor|default('#FFFFFF') }};
}


{# 积分价格样式 #}
{{ body }} .list_item .item_integral .left{
color: {{ data.shop_price_color | default('#FA386A') }};
}
{{ body }} .list_item .item_integral .right{
color: {{ data.integral_font_color | default('#FA386A') }};
}


{# 库存 #}
{{ body }} .item_stock {
    color: {{ data.stock_tip_font_color|default('#999999') }};
}

{# PC View More样式 #}
{{ body }} .view_more{
border-radius: {{ (data.view_more_radius|default(4))/remUnit }}{{ suffix }};
border-color: {{ data.btn_border_color | default('#333333') }}!important;
}
{{ body }} .view_more .view_more_btn {
background-color: {{ data.view_more_bg_color | default('#FFFFFF') }};
color: {{ data.view_more_font_color | default('#333333') }}!important;
font-size: {{ (data.view_more_font_size|default(28))/remUnit }}{{ suffix }};
}
