{% set liCol = ['geshop-col-12','geshop-col-6','geshop-col-4','geshop-col-3','geshop-col-2','geshop-col-1']%}

{% set remUnit = 37.5 %}
{% set scale = 	(data.default.lazyWidth/data.default.lazyHeight)|default(1) %}

{% set pageData = {
	boxMarginTop:data.boxMarginTop/remUnit,
	boxMarginBottom:data.boxMarginBottom/remUnit,
	gsPadding:data.gsPadding|default(5),
	gsMarginBottom:(data.gsMarginBottom|default(5))/remUnit,
	gsInnerPadding:(data.gsInnerPadding|default(5))/remUnit,
	goodsFtW:data.goodsFtW|default('bold'),
	goodsFtS:(data.goodsFtS|default('12'))/remUnit,
	discountWidth:(data.discountWidth|default(40))/remUnit,
	discountHeight:(data.discountHeight|default(40))/remUnit,
	discountRadius:data.discountRadius|default('50'),
	discountTop:(data.discountTopNew|default(-4))/remUnit,
	priceFt:(data.priceFt|default(14))/remUnit,
	marketPriceFt:(data.marketPriceFt|default(12))/remUnit,
	marketPriceC:data.marketPriceC,
	buyWidth:(data.buyWidth|default(80))/remUnit,
	buyHeight:(data.buyHeight|default(34))/remUnit,
	buyText:data.buyText|default(get_component_trans(lang,'btn_buy_now')),
	buyBgC:data.buyBgC|default('#e33194'),
	scale:(data.default.lazyWidth/data.default.lazyHeight)|default(1),
	goodScaleHeight:((178/scale)/remUnit)|slice(0,5),
} %}


<div class="geshop-component-box component-drag clearfix geshop-goods-sync" data-gid="U000081_default_sync" data-key="U000081" data-id="{{ pageInstanceId }}"
data-static-domain="{{staticDomain}}" data-editenv="{{data.isEditEnv}}" data-skus="{{data.goodsSKU}}" data-sitedomain="{{siteDomain}}">
    <!-- embed stylesheet begin -->
    <style type="text/css">
        [data-id="{{ pageInstanceId }}"] .component-self-goodWrap:hover, [data-id="{{ pageInstanceId }}"] .current {
            border-color:{{goodsData.goodsBdC|default('transparent')}} !important;
        }
    </style>
    <!-- embed stylesheet end -->

    <div class="geshop-col-12" style="
		{% if data.boxMarginTop %}margin-top: {{ data.boxMarginTop }}px;{% endif %}
		{% if data.boxMarginBottom %}margin-bottom: {{ data.boxMarginBottom }}px;{% endif %}
    ">
			{{include ('@app/htdocs/resources/template/m/goodsList_sync/default/index.twig')}}
    </div>
</div>

