{% set skuManage = true %}
{% set ipsAutoLimitClose = true %}

<style>
    #U000109-rg_template1_v1 .layui-elem-field > h3 {
        display: inline-block;
        float:  left;
    }

    #U000109-rg_template1_v1 .goods-wrapIx fieldset.layui-elem-field.tab-fid {
        text-align: right;
        margin: 16px 0;
    }

    #U000109-rg_template1_v1 .second-list, .list-group-item {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        width: 100%;
        padding: 0 16px 13px;
        margin: 13px auto;
        height: auto;
        background: rgba(254, 254, 254, 1);
        border-radius: 4px;
        border: 1px solid rgba(230, 230, 230, 1);
    }

    #U000109-rg_template1_v1 .goods-wrapIx .layui-form-item {
        margin: 16px auto;
    }


    #U000109-rg_template1_v1 .wrap-config.hide {
        display: none;
    }

    #U000109-rg_template1_v1 .design-form .tab-add-btn {
        /*float: right;*/
        float:none !important;
        text-align: right;
    }

</style>
<section class="goods-wrapIx">
    <input type="hidden" class="nav-list-arr" name="navList" value='{{ (data.navList | default({}) ) | json_encode }}' data-public-tag="true">
    <div class="wrap-config hide radio-tab-true">
        <fieldset class="layui-elem-field tab-fid">
            <h3 class="tab-hd">tab <span>1</span>配置</h3>
            <span class="img-btn  f-delete class-close"><i class='icon-delete'></i><b class="tips">删除</b></span>
            <span class="img-btn f-up class-close"><i class='icon-up'></i><b class="tips">上移</b></span>
            <span class="img-btn f-down class-close"><i class='icon-down'></i><b class="tips">下移</b></span>
            <span class="img-btn f-add class-close"><i class='icon-add '></i><b class="tips">新增</b>
        </span>
        </fieldset>
        <div class="second-list">
            <div class="layui-form-item">
                <label class="layui-form-label">tab名称 </label>
                <div class="layui-input-block">
                    <input type="text" name="tab_name" autocomplete="off" class="layui-input Unwanted">
                </div>
                <br>
                <label class="layui-form-label">商品数据ID </label>
                <div class="layui-input-block">
                    <input type="text" name="tab_id" autocomplete="off" class="layui-input Unwanted js-valid-cateIds">
                </div>
            </div>
        </div>
    </div>
    {% if data.navList %}
        {% set list =  data.navList %}
    {% else %}
        {% set list = [{ "tab_name": "",  "tab_id": "" }] %}

    {% endif %}
    {% set flen = list | length %}
    {% set slen = list.list | length %}
    <div class="nav-form-wrap">
        {% for i,item in  list %}
            <div class="wrap-config  radio-tab-true">
                <fieldset class="layui-elem-field tab-fid">
                    <h3 class="tab-hd">tab <span>1</span>配置</h3>
                    <span class="img-btn  f-delete class-close"><i class='icon-delete'></i><b class="tips">删除</b></span>
                    <span class="img-btn f-up class-close"><i class='icon-up'></i><b class="tips">上移</b></span>
                    <span class="img-btn f-down class-close"><i class='icon-down'></i><b class="tips">下移</b></span>
                    <span class="img-btn f-add class-close"><i class='icon-add '></i><b class="tips">新增</b>
        </span>
                </fieldset>
                <div class="second-list">
                    <div class="layui-form-item">
                        <label class="layui-form-label">tab名称 </label>
                        <div class="layui-input-block">
                            <input type="text" name="tab_name" autocomplete="off" class="layui-input Unwanted" value="{{ item.tab_name }}">
                        </div>
                        <br>
                        <label class="layui-form-label">商品数据ID </label>
                        <div class="layui-input-block">
                            <input type="text" name="tab_id" autocomplete="off" class="layui-input Unwanted js-valid-cateIds" value="{{ item.tab_id }}">
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


</section>


<script>
    {# 初始化删除等标签的显示和隐藏 #}
    /*let form = layui.form;*/
    var $wrap = $('#U000109-rg_template1_v1 .nav-form-wrap');
    var $hdWrap = $('#U000109-rg_template1_v1 .goods-wrapIx');


    /*一级图标的显示隐藏*/
    function showIcon() {
        upNum();
        var len = $wrap.find('.tab-fid').length;
        if (len > 1) {
            $wrap.find('.tab-fid').each(function (index) {
                if (index == 0) {
                    $(this).find('.img-btn').hide();
                    $(this).find('.f-down').show();
                    $(this).find('.f-delete').show();
                } else {
                    $(this).find('.img-btn').show();
                    if (index == len - 1) {
                        $(this).find('.f-down').hide();
                    } else {
                        $(this).find('.f-add').hide();
                    }
                }
            })
        } else {
            $wrap.find('.tab-fid').find('.img-btn').hide();
            $wrap.find('.tab-fid').find('.f-add').show();
        }
    }


    /*更新一级导航的数字 tab{x}*/
    function upNum() {
        $wrap.find('.tab-hd span').each(function (index) {
            $(this).text(index + 1)
        })
    }


    /*更新Tab数量*/

    function updateNavNum(value) {
        $hdWrap.find('input[name="tab_num"]').val(value);
    }

    /* 新增一级分类 */
    function addOne() {
        var clone = $('.wrap-config.hide').clone(true);
        $wrap.append(clone);
        $wrap.find('.wrap-config.hide').removeClass('hide');
        showIcon();
        updateNavNum($wrap.find('.wrap-config').length);
    }


    /*一级图标的显示隐藏*/
    showIcon();



    /* 新增一级分类 */
    $("#U000109-rg_template1_v1 .tab-fid").on('click', '.f-add', function (e) {
        e.stopPropagation();
        addOne();
    });

    /* 下移分类 */
    $("#U000109-rg_template1_v1 .nav-form-wrap").on('click', '.f-down,.s-down', function (e) {
        e.stopPropagation();
        var $tr = "";
        if ($(this).hasClass('f-down')) {
            $tr = $(this).parents('.wrap-config:eq(0)');
        } else {
            $tr = $(this).parents('.list-group-item:eq(0)');
        }
        var $trNext = $tr.next();
        if (0 != $trNext.length) {
            $trNext.after($tr);
            showIcon();
        }
    });

    /* 上移分类 */
    $("#U000109-rg_template1_v1 .nav-form-wrap").on('click', '.f-up,.s-up', function (e) {
        e.stopPropagation();
        var $tr = "";
        if ($(this).hasClass('f-up')) {
            $tr = $(this).parents('.wrap-config:eq(0)');
        } else {
            $tr = $(this).parents('.list-group-item:eq(0)');
        }
        var $trPrev = $tr.prev();
        if (0 != $trPrev.length) {
            $trPrev.before($tr);
            showIcon();
        }
    });


    /* 删除分类 */
    $("#U000109-rg_template1_v1 .nav-form-wrap").on('click', '.f-delete,.s-delete', function (e) {
        var $tr = "";
        if ($(this).hasClass('f-delete')) {
            $tr = $(this).parents('.wrap-config:eq(0)');
        } else {
            $tr = $(this).parents('.list-group-item:eq(0)');
        }

        layer.confirm('是否删除该分类?', {
            title: '提示',
            btn: ['否', '是'],
            area: '420px',
            icon: 3,
            skin: 'element-ui-dialog-class'
        }, function (index) {
            layer.close(index);
        }, function (index) {
            $tr.remove();
            layer.close(index);
            showIcon();
            updateNavNum($wrap.find('.wrap-config').length);
        })
    });

</script>
