	{#-webkit-box-shadow: 0px 0px 10px {{data.base_bg_shadow_color|default('#CCCCCC')}} !important;#}
{#}#}

{#{% endif %}#}
</style>
<div class="gb_goodsWrap gb_wrapper_common">
	<ul  class="clearfix gb-list-default gb-global-wrapper" >
    {% for key,item in data.goodsInfo|default([1])%}
	{% set left_number =  (item.stock_num- item.activity_stock)>0?(item.stock_num - item.activity_stock):0 %}
	{% set goodsStatus =  left_number == 0 and data.goodsInfo and pageData.limit_active!='1'? 'good_soldOut' :''%}
	<li  class="gs-list-item_tag gb_stylenone showProd js-showProd subjectGoodItem {{goodsStatus}}" data-track-key="{{item.goods_sn}}">
	<div class="gb_main">
		<a href="{{pageData.rightGoodsInfo.url_title}}" data-app="product" data-app-sku="{{pageData.rightGoodsInfo.web_goods_sn}}" data-app-wcode="{{pageData.rightGoodsInfo.wh_code}}"><p class="gb_goodsName">{{pageData.rightGoodsInfo.goods_title|default('This is a commodity')}}</p></a>
		<div class="gb_boder"></div>
		<div class="gb_leftInfo">
			<div class="gb_imgBox gs-good-label-box">
					{% if pageData.discount_active == '1' %}
						{% if pageData.rightGoodsInfo.discount and pageData.rightGoodsInfo.discount > 0 %}
							<div class="gb_discount">
								<div> 
									<strong>{{pageData.rightGoodsInfo.discount|default('50')}}%</strong> 
									<span>OFF</span> 
								</div>
							</div>
						{% endif %}
					{% endif %}

					<a href="{{pageData.rightGoodsInfo.url_title}}" class="js-link" data-app="product" data-app-sku="{{pageData.rightGoodsInfo.web_goods_sn}}" data-app-wcode="{{pageData.rightGoodsInfo.wh_code}}">
						{% if  pageData.rightGoodsInfo.goods_img  %}
							<img  class="js-lazyload" data-lazy="{{pageData.rightGoodsInfo.goods_img}}"  src="{{pageData.rightGoodsInfo.goods_img}}">
						{% else %}
							<img class="js-lazyload" data-lazy="{{pageData.imgSrc}}" src="{{pageData.imgSrc}}">
						{% endif %}
						{% if pageData.rightGoodsInfo.stock_num <= 0 and pageData.rightGoodsInfo != {} %}
							<i class="gs-goods-status" style="display: block"><span>{{gb_component_trans(lang , 'sold_out')}}</span></i>
						{% endif %}
					</a>
				{# 服务标 #}
				{% set labelBottom = 1.2 %}
				{% set item = pageData.rightGoodsInfo %}
				{{include ('@app/files/parts/temp/gb/common/default_m/goodLabel.twig')}}
			</div>
		</div>
		<div class="gb_rightInfo">
			<div class="gb_content_box">
				{% if data.goodsInfo %}
					{%  for key,item in data.contentList %}
						<p class="gb_contents">{{item}}</p>
					{% endfor %}
				{% else %}
					{%  for key,item in data.contentList|default(0..2) %}
						<p class="gb_contents">This is a product description {{key + 1}} </p>
					{% endfor %}
				{% endif %}
			</div>

			{# 本店售价是否显示 #}
			{% if pageData.price_label_active == '1' %}
				{% if pageData.rightGoodsInfo.market_price != pageData.rightGoodsInfo.shop_price %}
					<span class="gb_price1">  <strike class="js-currency" data-currency="{{pageData.rightGoodsInfo.market_price}}">${{pageData.rightGoodsInfo.market_price|default('0.00')}}</strike> </span>
				{% endif %}
			{% endif %}

			<p class="gb_price2">
				<strong class="js-currency gs-sale-price" data-currency="{{pageData.rightGoodsInfo.shop_price|default('0.00')}}">${{pageData.rightGoodsInfo.shop_price|default('0.00')}} </strong>
			</p>

			<div class="gb_footer">
				<div class="gb_goods_buy">
					<a  class="gb_buy buyLink js-link {% if pageData.rightGoodsInfo.stock_num <= 0 and pageData.rightGoodsInfo != {} %} cart_good_soldOut {% endif %}"  href="{{pageData.rightGoodsInfo.url_title}}" data-app="product" data-app-sku="{{pageData.rightGoodsInfo.web_goods_sn}}" data-app-wcode="{{pageData.rightGoodsInfo.wh_code}}">
						{% if pageData.rightGoodsInfo.stock_num <= 0 and pageData.rightGoodsInfo != {} %}
							{{gb_component_trans(lang , 'sold_out')}}
						{% else %}
							{{pageData.buy_text|default(gb_component_trans(lang , 'buy_now'))}}
						{% endif %}
					</a>
				</div>
				<div class="gb_goods_cart">
					<i class="icon-cart gb_cart  js-addCard   {% if pageData.rightGoodsInfo.stock_num <= 0 and pageData.rightGoodsInfo != {} %} cart_good_soldOut {% endif %}"   data-sku="{{pageData.rightGoodsInfo.goodsSn}}" data-warehousecode="{{pageData.rightGoodsInfo.whCode}}" data-img="{{pageData.rightGoodsInfo.goods_img}}" data-qty="1" style="" ></i>
				</div>
			</div>
	</div>
</li>
{% endfor %}
<ul>
</div>
</div>




