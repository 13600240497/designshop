{% set liCol = ['geshop-col-12','geshop-col-6','geshop-col-4','geshop-col-3','geshop-col-2','geshop-col-1']%}
{% set suffix ='rem'%}
{% set remUnit = 75 %}

{% if data.colNum == '1'%}
    {% set colClass = liCol[0] %}
{% elseif data.colNum == '2' %}
    {% set colClass = liCol[1] %}
{% elseif data.colNum == '3' %}
    {% set colClass = liCol[2] %}
{% elseif data.colNum == '4' %}
    {% set colClass = liCol[3] %}
{% elseif data.colNum == '5' %}
    {% set colClass = liCol[4] %}
{% else %}
    {% set colClass = liCol[3] %}
{% endif %}





{%
    set pageData = {
		price_ft_weight:data.price_ft_weight|default(1),
		base_bg_shadow:data.base_bg_shadow|default(0),
        imgSrc:'https://geshopcss.logsss.com/imagecache/geshop-test/resources/images/default/good.png',

        base_magin_top:(data.base_magin_top|default(0)/remUnit)|number_format(3, '.'),
		base_magin_bottom:(data.base_magin_bottom|default(32)/remUnit)|number_format(3, '.'),
		base_bgc:data.base_bgc is not null ? data.base_bgc:'#FFFFFF',

		line_color:data.line_color is not null ? data.line_color:'#979797',
		line_active:data.line_active|default(1),

		goods_shop_ftc:data.goods_shop_ftc is not null ? data.goods_shop_ftc:'#f30240',
		goods_shop_fts:(data.goods_shop_fts|default(30)/remUnit)|number_format(3, '.'),
		goods_text_ftc:data.goods_text_ftc is not null ? data.goods_text_ftc:'#3333333',
		goods_title_ftc: data.goods_title_ftc is not null ? data.goods_title_ftc:'#3333333',
		market_ftc:data.market_ftc is not null ? data.market_ftc:'#9B9B9B',


		discount_height:(data.discount_height|default(80)/remUnit)|number_format(3, '.'),
		discount_width:(data.discount_width|default(80)/remUnit)|number_format(3, '.'),
		discount_fts:(data.discount_fts|default(16)/remUnit)|number_format(3, '.'),
		discount_off_fts:(data.discount_off_fts|default(12)/remUnit)|number_format(3, '.'),
		discount_off_ftc:data.discount_off_ftc is not null ? data.discount_off_ftc:'#FFFFFF',
		discount_marginR:(data.discount_marginR|default(0)/remUnit)|number_format(3, '.'),
		discount_marginT:(data.discount_marginT|default(0)/remUnit)|number_format(3, '.'),
		discount_bgImage:data.discount_bgImage,
		discount_active: data.discount_active|default(1),
		discount_bgc:data.discount_bgc is not null ? data.discount_bgc:'#FEC455',
		discount_ftc:data.discount_ftc is not null ? data.discount_ftc:'#FFFFFF',

		shop_btn_bgc:data.shop_btn_bgc is not null ? data.shop_btn_bgc:'#CC0000',
		shop_btn_color:data.shop_btn_color is not null ? data.shop_btn_color:'#FFFFFF',
		shop_car_bgc:data.shop_car_bgc is not null ? data.shop_car_bgc:'#FF8A00',

		buy_text:data.buy_text,
		shop_text_size:(data.shop_text_size|default(18)/remUnit)|number_format(3, '.'),

		rightGoodsInfo: data.goodsInfo[0],

		server_label_active: data.server_label_active|default(0),
		price_label_active: data.price_label_active|default(1),
		limt_num_active: data.limt_num_active|default(1)
    }
%}

{# {% set goodsStatus =  pageData.rightGoodsInfo.stockNum == 0 and pageData.rightGoodsInfo != {} ? 'good_soldOut' :'goodsBuyPro'%} #}


<div class="geshop-component-box component-drag geshop-gb-component ui-{{ pageInstanceId }}" data-gid="U000124_default" data-key="U000124"  data-buytext="{{data.shop_text}}" data-id="{{ pageInstanceId }}"
	style="{% if pageData.base_magin_bottom %}margin-bottom: {{ pageData.base_magin_bottom }}{{suffix}};{% endif %}"
>
<style type="text/css">
    [data-gid="U000124_default"][data-id="{{ pageInstanceId }}"]{
        margin-top: {{ pageData.base_magin_top }};
    }

	[data-id="{{ pageInstanceId }}"] .gb_goodsWrap{
		width:{{(750/remUnit)|number_format(3, '.')~suffix}};
		min-height:{{(320/remUnit)|number_format(3, '.')~suffix}};
		position:relative;
		background:{{pageData.base.bgc}};
	}
	[data-id="{{ pageInstanceId }}"] .gb_main{
		padding: {{(10/remUnit)|number_format(3, '.')~suffix}};
		min-height:{{(167/remUnit)|number_format(3, '.')~suffix}};
	}


	{#[data-id="{{ pageInstanceId }}"] .gb_stylenone{#}
		{#background-color:{{pageData.base_bgc}};#}
	{#}#}

	[data-id="{{ pageInstanceId }}"] .gb_goodsName{
		color:{{pageData.goods_title_ftc}};
	}

	[data-id="{{ pageInstanceId }}"] .gb_boder{
      margin: 0.266rem 0 0.24rem;
	 {% if pageData.line_active == "1" %}
	 	 border:0.0266rem solid {{pageData.line_color}};
	 {% else %}
	 	border:0.0266rem dashed  {{pageData.line_color}};
	 {% endif %}
    }

	[data-id="{{ pageInstanceId }}"]  .gb_discount{
		position:absolute;
		bottom:{{pageData.discount_marginT ~suffix}};
		left:{{pageData.discount_marginR  ~suffix}};
		width:{{pageData.discount_width  ~suffix}};
		height:{{pageData.discount_height  ~suffix}};
		{% if pageData.discount_bgImage == "" %}
			border-radius:50%;
			background:{{pageData.discount_bgc}};
		{% else %}
			background:url({{data.discount_bgImage}}) no-repeat 0 0/100% 100%;
		{% endif %}
		color:{{pageData.discount_ftc}};
		text-align:center;
		display:table;
		line-height:1;
	}

	[data-id="{{ pageInstanceId }}"] .gb_discount div{
		width:{{pageData.discount_width  ~suffix}};
		height:{{pageData.discount_height  ~suffix}};
		font-size:{{pageData.discount_fts}};
		display:table-cell;
		vertical-align:middle;
	}
	[data-id="{{ pageInstanceId }}"] .gb_discount strong{
		display:block;
		font-size:{{pageData.discount_fts ~suffix}};
	}
	[data-id="{{ pageInstanceId }}"] .gb_discount span{
		font-size:{{pageData.discount_off_fts ~suffix}};
	}


	[data-id="{{ pageInstanceId }}"] .gb_price1{
		color:{{pageData.market_ftc}};
	}
	[data-id="{{ pageInstanceId }}"] .gb_price2{
		color:{{pageData.goods_shop_ftc}};
		font-size:{{pageData.goods_shop_fts  ~suffix}};
	}

	[data-id="{{ pageInstanceId }}"] .gb_buy{
		background:{{pageData.shop_btn_bgc}};
		color:{{pageData.shop_btn_color}};
		font-size:{{pageData.shop_text_size  ~suffix}};
	}


	[data-id="{{ pageInstanceId }}"] .gb_cart{
		background:{{pageData.shop_car_bgc}};
	}

	[data-id="{{ pageInstanceId }}"] .gb_content_box{
		color:{{pageData.goods_text_ftc}};
		margin-bottom:0.373{{suffix}};
	}
	
	[data-gid="U000124_default"][data-id="{{ pageInstanceId }}"] .gb_goodsWrap .gb_contents {
		color: {{pageData.goods_text_ftc}};
        }
	
	
