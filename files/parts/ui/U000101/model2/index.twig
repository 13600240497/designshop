                      {% if pageData.rightGoodsInfo == {} or pageData.rightGoodsInfo.discount > 0 %}
                      <div class="gb_discount" style="{% if data.discount_bgImage %}background:url({{data.discount_bgImage}}) no-repeat 0 0/100% 100%;{% endif %}"> <div> <strong>{{pageData.rightGoodsInfo.discount|default('50')}}%</strong> <span>OFF</span> </div> </div>
                      {% endif %}
                  {% endif %}#}
