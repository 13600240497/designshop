{# 商品主图 #}
{% set goodsImg =  data.main_goods_img|default(pageData.rightGoodsInfo.goods_img) %}
 {% set goodsStatus =  pageData.rightGoodsInfo.stock_num <= 0 and  pageData.rightGoodsInfo != {} ? 'good_soldOut' :'goodsBuyPro'%}


<div class="geshop-component-box component-drag U000101-{{ pageInstanceId }} ui-U000101_model2 geshop-gb-component ui-{{ pageInstanceId }}" data-key="U000101" data-buytext="{{ pageData.shop_text|default(gb_component_trans(lang , 'buy_now')) }}" data-id="{{ pageInstanceId }}"
		 style="{% if pageData.base_magin_bottom %}margin-bottom: {{ pageData.base_magin_bottom }}px;{% endif %}"
>
	<style type="text/css">
		.geshop-gb-component.U000101-{{ pageInstanceId }}{
			width:{{ pageData.base_box_width }};
			margin: auto;
			background-color:{{ data.base_box_bgc|default('#FFFFFF') }};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb-section{
			padding:{{ pageData.base_component_pd_tb }} 0;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_goodsWrap {
			width: 1000px;
			height: 270px;
			margin: 0 auto;
			background: {{pageData.base_bgc}};
			position: relative;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_leftGood {
			position: relative;
			width: 270px;
			height: 270px;
			float: left;
			/*padding:25px;*/
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_rightGood {
			position: relative;
			width: 730px;
			height: 270px;
			float: right;
			padding: 24px 28px;
			box-sizing: border-box;
			background-color:{{ pageData.goods_item_bgc }};
		}


		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_imgBox {
			width: 270px;
			height: 270px;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_imgBox img {
			width: 100%;
			height: 100%;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_goodsName {
			color: {{pageData.goods_color}};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_goodBorder {
			margin: 0;
			height: 1px;
			background: {{ pageData.title_line_color }};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_times {
			color: {{pageData.down_time_color}};
			font-size: {{pageData.down_time_fts}};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_times em {
			margin-right: 8px;
			font-size: {{pageData.down_time_fts}};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_contentBox {
			height: 75px;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_price1 {
			font-size: 14px;
			color: {{pageData.times_font_color}};
			margin: 0 10px;
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_price2 {
			font-size: 26px;
			margin: 16px 0;
			color: {{pageData.dynamic_font_color}};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_price2 > * {
			display: inline-block;
			/*vertical-align: middle;*/
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_buy {
			color: {{pageData.buy_ftc}};
			background: {{pageData.buy_bgc}};
			font-size: {{pageData.shop_text_size}};
			width: {{ pageData.buy_btn_width }};
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_buy:hover {
			color: {{pageData.buy_hover_ftc}};
			background-color: {{pageData.buy_hover_bgc}};
		}
		/* Add to Cart */
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_cart {
			background: {{pageData.cart_btn_bgc}};
			color:{{ pageData.cart_btn_ftc }};
			width:{{ pageData.cart_btn_width }}
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_cart:hover {
			background-color: {{data.cart_btn_bgc_hoverBC}};
			color: {{data.cart_btn_bgc_hoverFC}}
		}

		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_stylenone {
			list-style: none !important;
		}
		/* price */
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gs-shop-price .js-currency{
			font-size:{{ pageData.price_fts }};
			padding:0 10px;
			{% if pageData.price_ft_weight == '1' %}
				font-weight: bold;
			{% endif %}
		}
		.geshop-gb-component.U000101-{{ pageInstanceId }} .price-before{
			font-size:14px;
			color:{{ pageData.price_before_text_color }};
		}
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gs-discount-text{
			font-size:{{ pageData.discount_text_fts }};
			color:{{ pageData.discount_price_color }};
		}
		/* section */
		{% if pageData.base_bg_shadow == '1' %}
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_goodsWrap{
			-webkit-box-shadow: 0 0 10px {{ pageData.base_bg_shadow_color }};
			-moz-box-shadow: 0 0 10px {{ pageData.base_bg_shadow_color }};
			box-shadow: 0 0 10px {{ pageData.base_bg_shadow_color }};
		}
		{% endif %}
		/* flash sale */
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_flash_sale{
			color:{{ pageData.goods_label_ftc }};
			background-color:{{ pageData.goods_label_bgc }};
		}
		/*title*/
		.geshop-gb-component.U000101-{{ pageInstanceId }} .gb_goodsName_text{
			color:{{ pageData.goods_title_color }};
		}

    /*背景图*/
.geshop-gb-component.ui-{{ pageInstanceId }} .gb_wrapper_common{
{% if data.base_box_bgImage %}
	background-image:url({{ data.base_box_bgImage }});
{% endif %}
{% if data.component_bg_value %}
{{ data.component_bg_value }}
{% endif %}
}

/*动态价格粗细*/
.geshop-gb-component.ui-{{ pageInstanceId }} .gs-shop-price strong,.geshop-gb-component.ui-{{ pageInstanceId }} .gs-sale-price{
{% if pageData.price_ft_weight == '1' %}
	font-weight:bold !important;
{% else %}
	font-weight:normal !important;
{% endif %}
}
/*投影*/
{% if pageData.base_bg_shadow == '0'%}
.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item,.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item_tag {
	box-shadow: none !important;
}

{% else %}
.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item,.geshop-gb-component.ui-{{ pageInstanceId }} .gs-list-item_tag {
	box-shadow: 0px 0px 10px {{data.base_bg_shadow_color|default('#CCCCCC')}} !important;
	-webkit-box-shadow: 0px 0px 10px {{data.base_bg_shadow_color|default('#CCCCCC')}} !important;
}

{% endif %}
</style>
	
	<section class="gb-section gb_wrapper_common" style="{% if data.goodsInfo|length == 0 and data.isEditEnv == 0 %}display:none;{% endif %}">
		<div class="gb_goodsWrap">
			<li class="gs-subjectGoodItem {{ goodsStatus }}" data-track-key="{{ pageData.rightGoodsInfo.goods_sn }}">
				<div class="gb_leftGood">
					{# 推荐标签#}
					{#{% if pageData.recommended_active == "1" %}<div class="gb_recommended" style="{% if data.recommended_bgImage %}background:url({{data.recommended_bgImage}}) no-repeat 0 0/100% 100%;{% endif %}"><div><span>{{pageData.discount_text}}</span></div></div>{% endif %}#}
