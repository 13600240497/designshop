					{% endif %}
					{# 评分 #}
					{% if  pageData.rightGoodsInfo.pass_avg_score  %}
						<div class="gs-rating-box">
							<span class="gs-rating" data-value="{{ pageData.rightGoodsInfo.pass_avg_score|number_format(1, '.') }}"></span>
