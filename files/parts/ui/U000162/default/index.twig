<div class="geshop-component-box component-drag component-sync clearfix" data-gid="U000162_default" data-key="U000162" data-id="{{ pageInstanceId }}"
	data-editenv="{{data.isEditEnv}}" data-static-domain="{{staticDomain}}" data-siteCode="{{ siteCode }}" data-interfaceDomain="{{interfaceDomain}}" data-lang="{{lang}}">
	<!-- embed stylesheet begin -->
	<style type="text/css">
		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-tab-status {
			background-color: {{pageData.tab_unselectBgc}};
			color: {{pageData.tab_unselectTextC}};
			border-color:{{pageData.tab_unselectBdC}};
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-tab_select {
				border-width:1px;
				background-color: {{pageData.tab_selectBgc}} !important;
				color: {{pageData.tab_selectTextC}} !important;
				border-color:{{pageData.tab_selectBdC}} !important;
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] [data-gid="gs-goods-rwDefult-tabspike"].gs-goodsWrap li {
			margin-top: {{pageData.goodsMarginTop}}px;
			margin-bottom: {{pageData.goodsMarginBottom}}px;
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-option .prev,[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-option .next{
			background-color:{{pageData.arrowBgC}};

		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-option .prev {
			{% if pageData.arrowLBgImg %}background-image:url({{pageData.arrowLBgImg}});{% else %}background-image:url(/resources/images/icon/tabspike-arrow-left.png);{% endif %}
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs-option .next {
			{% if pageData.arrowRBgImg %}background-image:url({{pageData.arrowRBgImg}});{% else %}background-image:url(/resources/images/icon/tabspike-arrow-right.png);{% endif %}
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .gs_component_countDown em{
			font-size:{{pageData.downFtS}}{{suffix}};
			line-height:{{sizeWidth}}{{suffix}};
			color:{{pageData.downTextC}};
			background: {{data.downTimeBgC|default('transparent')}};
		}

		{% if data.isEditEnv == 1 %}
		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] [data-gid="gs-goods-prePromotion"] .goodStatus {
			font-size: 18px;
		}

		{% endif %}
		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] [data-gid="gs-goods-prePromotion"] .goods-item-name {
			{% if siteCode|split('-')[0] == 'zf' and data.isEditEnv == 0 %}padding-top:0px;{% else %}padding-top: 10px;{% endif %}
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .goods-item.goods-pre-promotion-item {
			border-radius: {{ pageData.goodsBRadius }}px;
			-webkit-border-radius: {{ pageData.goodsBRadius }}px;
			-moz-border-radius: {{ pageData.goodsBRadius }}px;
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .goods-item.goods-pre-promotion-item:hover {
			border-color: {{pageData.goodsBdC}};
			box-shadow: 0 0 10px {{pageData.goodsBShadowdC}};
		}

		[data-gid="U000162_default"][data-id="{{ pageInstanceId }}"] .discount-off {
			background-color:{{ data.discount_bg_color | default('#FA386A')}};
			color:{{ data.discount_font_color ?? '#FFFFFF'}};
		{% if data.discount_bg_image is not empty %}
			background-image: url({{ data.discount_bg_image }})
		{% endif %}
		}
	</style>
	<!-- embed stylesheet end -->

	<div class="geshop-col-12">
		<div class="gs-goods-tab" style="{% if siteCode|split('-')[0] == 'zf' %}width:1240px;{% else %}width:{{goodsData.baseWidth}}px;{% endif %}margin-bottom:{{pageData.boxMarginBottom}}px;background-color:{{pageData.baseBgC}}" data-isEditEnv="{{data.isEditEnv}}" data-killLeftVisible="{{data.tab_endShowActive}}" data-tplStatus="0" data-sitedomain="{{siteDomain}}">

			<div class="gs-main">

				<p class="gs-goods-inner-title" style="
					{% if pageData.fs_titleBgC %}background-color:{{ pageData.fs_titleBgC }};{% endif %}
					{% if pageData.fs_titleHeight %}height:{{ pageData.fs_titleHeight }}px;{% endif %}
					{% if pageData.fs_titleBgImg %}background-image:url({{ pageData.fs_titleBgImg }});{% endif %}
					{% if pageData.fs_titleFtC %}color:{{ pageData.fs_titleFtC }};{% endif %}
					{% if pageData.fs_titleMarginBottom %}margin-bottom:{{ pageData.fs_titleMarginBottom }}px;{% endif %}
					{% if pageData.fs_titleFtSize %}font-size:{{ pageData.fs_titleFtSize }}px;{% endif %}
				"><span class="gs-goods-inner-text">{{ pageData.fs_titleTitle }}</span></p>

				<div class="gs-tab-content">
					<div class="gs-tab-item gs-goodsWrap" data-index="{{loop.index0}}" data-skus="{{data.goodsSKU}}" data-skuLimit="{{data.skuLimit}}">
						{{include ('@app/htdocs/resources/template/pc/goodsList_sync/prePromotionDefault/index.twig')}}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
