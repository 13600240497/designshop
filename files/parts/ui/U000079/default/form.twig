{% set buyBorderSArr = [
	{name:'无',value:'none'},
	{name:'实线',value:'solid'},
	{name:'虚线',value:'dashed'},
	{name:'点状',value:'dotted'},
	{name:'双线',value:'double'},
	{name:'继承上级',value:'inherit'},
]%}

<script src="/resources/template/goods/index.js?v={{ serverTime }}"></script>

<h3 class="component-form-title">
  <span>按钮组件配置</span>
  <a href="javascript:;" class="design-form-close js_closeDesignForm icon-close"><i class="el-icon-close"></i></a>
</h3>

{{include ('@app/htdocs/resources/template/pc/templateList/index.twig')}}

<div class="component-form-setting-item component-form-configure-item" style="padding-bottom: 40px;">
	<p class="geshop-title" style="margin-top: 0;">常用配置</p>
	<div class="layui-form-item">
    <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 下间距(px)</label>   							
		<div class="layui-input-block">
			<input type="text" class="layui-input" name="buyMarginB" autocomplete="off" value="{{data.buyMarginB|default(50)}}">
		</div>					
	</div>
	<div class="layui-form-item">
		<label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮文案</label>
		<div class="layui-input-block">
		<input type="text" name="buyText" autocomplete="off" class="layui-input" value="{{data.buyText|default('See More')}}">
		</div>
	</div>
	<div class="layui-form-item">
		<label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮跳转专题名称</label>
		<div class="layui-input-block">
		<input type="text" name="ga_name" autocomplete="off" class="layui-input" value="{{data.ga_name|default('')}}">
		</div>
	</div>
	<div class="layui-form-item">
    <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 字体大小(px)</label>   							
		<div class="layui-input-block">
			<input type="text" class="layui-input" name="buyFtS" autocomplete="off" value="{{data.buyFtS|default(14)}}">	
		</div>			
	</div>
	<div class="layui-form-item gs-inline-layout-left">
    <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 默认文字颜色</label>   							
    <div class="layui-input-block">
      <div class="color-picker-selector" data-hidden-name="buyFtC"><div style="background-color: {{data.buyFtC|default('#1c1c1c')}};"></div></div>
      <input type="text" class="layui-input" name="buyFtC" autocomplete="off" value="{{data.buyFtC|default('#1c1c1c') }}">
    </div>					
	</div>
	<div class="layui-form-item gs-inline-layout-right">
    <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 鼠标滑过文字颜色</label>   							
    <div class="layui-input-block">
      <div class="color-picker-selector" data-hidden-name="buyFtCHover"><div style="background-color: {{data.buyFtCHover|default('#ffffff')}};"></div></div>
      <input type="text" class="layui-input" name="buyFtCHover" autocomplete="off" value="{{data.buyFtCHover|default('#ffffff')}}">
    </div>					
	</div>
	<div class="layui-form-item">
    <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮链接</label>
    <div class="layui-input-block">
      <input type="text" class="layui-input" name="buyLink" autocomplete="off" value="{{data.buyLink}}" data-public-tag="true">
    </div>
	</div>
	<div class="clearfix">
    <a href="javascript:;" id="js_moreConfig" style="color:#1E9FFF">高级配置</a>
  </div>
</div>

<div class="component-form-setting-item component-form-advanced-item">
  <h4 class="title"><i class="layui-icon back" id="js_advanced_baseConfig">&#xe603;</i>高级配置</h4>
  <div class="layui-collapse advanced-setting-container">
    <div class="layui-colla-item">
      <h2 class="layui-colla-title">基础配置</h2>
      <div class="layui-colla-content layui-show">
				<div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 按钮文案是否显示</label>
          <div class="layui-input-block">
            <input type="radio" name="textVis" value="show" title="是"{% if data.textVis|default('show') == 'show' %} checked{% endif %}>
            <input type="radio" name="textVis" value="hidden" title="否"{% if data.textVis|default('show') != 'show' %} checked{% endif %}>
          </div>
				</div>
				<div class="layui-form-item gs-inline-layout-left">
  			  <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮宽度(px)</label>   							
					<div class="layui-input-block">
						<input type="text" class="layui-input" name="buyWidth" autocomplete="off" value="{{data.buyWidth|default(116)}}">
					</div>					
				</div>
				<div class="layui-form-item gs-inline-layout-right">
  			  <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮高度(px)</label>   							
					<div class="layui-input-block">
						<input type="text" class="layui-input" name="buyHeight" autocomplete="off" value="{{data.buyHeight|default(34)}}">
					</div>					
				</div>
				<div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 圆角(px)</label>
          <div class="layui-input-block">
            <input type="text" name="buyRadius" autocomplete="off" class="layui-input" value="{{data.buyRadius|default(0)}}">
          </div>
				</div>
				<div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 边框类型</label>
					<div class="layui-input-block">
            <input type="radio" name="buyBorderS" value="solid" title="实线"{% if data.buyBorderS|default('solid') == 'solid' %} checked{% endif %}>
            <input type="radio" name="buyBorderS" value="dashed" title="虚线"{% if data.buyBorderS|default('solid') != 'solid' %} checked{% endif %}>
          </div>
				</div>
				<div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 边框粗细(px)</label>
          <div class="layui-input-block">
            <input type="text" name="borderFont" autocomplete="off" class="layui-input" value="{{data.borderFont|default(1)}}">
          </div>
				</div>
				<div class="layui-form-item">
  			  <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 边框颜色</label>   							
  			  <div class="layui-input-block">
  			    <div class="color-picker-selector" data-hidden-name="borderColor"><div style="background-color: {{data.borderColor|default('#1c1c1c')}};"></div></div>
  			    <input type="text" class="layui-input" name="borderColor" autocomplete="off" value="{{data.borderColor|default('#1c1c1c')}}">
  			  </div>					
				</div>
				<div class="layui-form-item gs-inline-layout-left">
  			  <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮背景默认颜色</label>   							
  			  <div class="layui-input-block">
  			    <div class="color-picker-selector" data-hidden-name="buyBgc"><div style="background-color: {{data.buyBgc|default('#ffffff')}};"></div></div>
						<input type="text" class="layui-input" name="buyBgc" autocomplete="off" value="{{data.buyBgc|default('#ffffff')}}">
					</div>
				</div>
				<div class="layui-form-item gs-inline-layout-right">
  			  <label class="form-label-item"><span class="layui-badge-dot layui-bg-orange"></span> 按钮背景鼠标滑过颜色</label>   							
  			  <div class="layui-input-block">
  			    <div class="color-picker-selector" data-hidden-name="buyBgcHover"><div style="background-color: {{data.buyBgcHover|default('#1c1c1c')}};"></div></div>
						<input type="text" class="layui-input" name="buyBgcHover" autocomplete="off" value="{{data.buyBgcHover|default('#1c1c1c')}}">
					</div>
  			</div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 背景图片</label>
          <div class="layui-input-block">
            <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
            <input type="text" name="buyBgImg" autocomplete="off" class="layui-input" value="{{data.buyBgImg}}">
          </div>
				</div>
				<div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 文字粗细</label>
          <div class="layui-input-block">
						<input type="radio" name="buyFtW" value="normal" title="正常"{% if data.buyFtW|default('normal') == 'normal' %} checked{% endif %}>
            <input type="radio" name="buyFtW" value="bold" title="加粗"{% if data.buyFtW|default('normal') != 'normal' %} checked{% endif %}>
          </div>
				</div>
      </div>
		</div>
  </div>
</div>

<div class="layui-form-item geshop-form-operation">
  <button type="button" class="layui-btn layui-btn-primary js_closeDesignForm">取消</button>
  <button type="button" class="layui-btn layui-btn-normal js_submitDesignForm">提交</button>
</div>



      
