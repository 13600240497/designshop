                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="color1"><div style="background-color: {{ data.color1 | default('#333333') }};"></div></div>
                        <input type="show" class="layui-input" name="color1" autocomplete="off" value="{{ data.color1 | default('#333333') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案2</label>
                      <div class="layui-input-block">
                        <input type="text" name="text2" autocomplete="off" class="layui-input" value="{{ data.text2 }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案2颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="color2"><div style="background-color: {{ data.color2 | default('#333333') }};"></div></div>
                        <input type="show" class="layui-input" name="color2" autocomplete="off" value="{{ data.color2 | default('#333333') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案3背景颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="bgColor3"><div style="background-color: {{ data.bgColor3 }};"></div></div>
                        <input type="show" class="layui-input" name="bgColor3" autocomplete="off" value="{{ data.bgColor3 | default('#ffffff') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案3边框颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="borderColor3"><div style="background-color: {{ data.borderColor3 | default('#333333') }};"></div></div>
                        <input type="text" class="layui-input" name="borderColor3" autocomplete="off" value="{{ data.borderColor3 | default('#333333') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案3</label>
                      <div class="layui-input-block">
                        <input type="text" name="text3" autocomplete="off" class="layui-input" value="{{ data.text3 | default('View More') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">文案3颜色</label>
                      <div class="layui-input-block">
                        <div class="color-picker-selector" data-hidden-name="color3"><div style="background-color: {{ data.color3 | default('#333333') }};"></div></div>
                        <input type="show" class="layui-input" name="color3" autocomplete="off" value="{{ data.color3 | default('#333333') }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">链接URL</label>
                      <div class="layui-input-block">
                        <input type="text" name="linkUrl" autocomplete="off" class="layui-input" value="{{ data.linkUrl }}">
                      </div>
                    </div>
                    <div class="layui-form-item">
                      <label class="layui-form-label">
                          链接是否打开新窗口</label>
                      <div class="layui-input-block">
                          <input type="radio" name="isOpenNew" value="1" {% if data.isOpenNew|default('0') == '1' %} checked{% endif %} title="是">
                          <input type="radio" name="isOpenNew" value="0" {% if data.isOpenNew|default('0') == '0' %} checked{% endif %} title="否">
                      </div>
                    </div>
                  </div>
                </fieldset>
                <div class="text-right">
                  <button type="button" id="js_moreConfig" class="layui-btn layui-btn-normal layui-btn-sm">更多配置</button>
                </div>
              </div>
              <div>
                <div class="layui-tab layui-tab-vertical">
                  <ul class="layui-tab-title">
                    <li class="layui-this">位置设置</li>
                    <li>文案1</li>
                    <li>文案2</li>
                    <li>按钮</li>
                  </ul>
                  <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                      <div class="layui-form-item">
                        <label class="layui-form-label">Banner上边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="boxMarginTop" autocomplete="off" class="layui-input" value="{{ data.boxMarginTop | default(0) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">Banner下边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="boxMarginBottom" autocomplete="off" class="layui-input" value="{{ data.boxMarginBottom | default(0) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">Banner左边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="boxMarginLeft" autocomplete="off" class="layui-input" value="{{ data.boxMarginLeft | default(0) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">Banner右边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="boxMargRight" autocomplete="off" class="layui-input" value="{{ data.boxMargRight | default(0) }}">
                        </div>
                      </div>
                    </div>
                    <div class="layui-tab-item">
                      <div class="layui-form-item">
                        <label class="layui-form-label">上边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="marginTop1" autocomplete="off" class="layui-input" value="{{ data.marginTop1 | default(60) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">字体大小(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="fontSize1" autocomplete="off" class="layui-input" value="{{ data.fontSize1 | default(32) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">字体粗细</label>
                        <div class="layui-input-block">
                          <input type="radio" name="fontWeight1" value="bold" title="加粗"{% if data.fontWeight1 | default('bold') == 'bold' %} checked{% endif %}>
                          <input type="radio" name="fontWeight1" value="normal" title="正常"{% if data.fontWeight1 | default('bold') != 'bold' %} checked{% endif %}>
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">图片</label>
                        <div class="layui-input-block">
                          <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
                          <input type="text" name="imgSrc1" autocomplete="off" class="layui-input" value="{{ data.imgSrc1 }}" data-height="imgHeight1" data-width="imgWidth1">
                          <input type="hidden" name="imgWidth1" value="{{ data.imgWidth1 }}">
                          <input type="hidden" name="imgHeight1" value="{{ data.imgHeight1 }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">图片宽度(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="imgWidth1" autocomplete="off" class="layui-input" value="{{ data.imgWidth1 }}" disabled>
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">图片高度(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="imgHeight1" autocomplete="off" class="layui-input" value="{{ data.imgHeight1 }}" disabled>
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">是否显示</label>
                        <div class="layui-input-block">
                          <input type="radio" name="enable1" value="block" title="是"{% if data.enable1 | default('block') == 'block' %} checked{% endif %}>
                          <input type="radio" name="enable1" value="none" title="否"{% if data.enable1 | default('block') != 'block' %} checked{% endif %}>
                        </div>
                      </div>
                    </div>
                    <div class="layui-tab-item">
                      <div class="layui-form-item">
                        <label class="layui-form-label">上边距(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="marginTop2" autocomplete="off" class="layui-input" value="{{ data.marginTop2 | default(60) }}">
                        </div>
                      </div>
                      <div class="layui-form-item">
                        <label class="layui-form-label">字体大小(px)</label>
                        <div class="layui-input-block">
                          <input type="text" name="fontSize2" autocomplete="off" class="layui-input" value="{{ data.fontSize2 | default(64) }}">
