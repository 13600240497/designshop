
{% set space = '#U000232_'~pageInstanceId %}

{% set body = space~' .geshop-U000232-model1-body' %}

{{ space }} .geshop-U000232-model1-body {
    width: 100%;
    overflow: hidden;
    background-color: {{ data.box_bg_color ?? 'transparent' }};
}

{# 三端共有样式 #}
{{ body }} .geshop-U000232-model1-wrapper{
    text-align:{{ data.btn_align|default('center') }}
}

{{ body }} .gs-btn-area{
    color:{{ data.btn_ft_color|default('#FFFFFF') }};
    border-color:{{ data.btn_border_color|default('#000000') }};
    border-style: {{ data.border_type|default('1') == '1'? 'solid' : 'dashed' }};
    background-color:{{ data.btn_bg_color|default('#000000') }};
}

{{ body }} .gs-btn{
    background-color:{{ data.btn_bg_color|default('#000000') }};
    font-weight:{{ data.font_weight|default('bold') }};
}


{# PC 模式#}
@media screen and (min-width: 1025px){
    {{ body }} .gs-btn-area:hover{
        color:{{ data.pc_btn_hover_color|default('#000000') }};
        border-color:{{ data.pc_btn_hover_border_color|default('#333333') }};
        background-color:{{ data.pc_btn_hover_bgc|default('#FFFFFF') }};
    }

    {{ body }} .gs-btn-area:hover .gs-btn{
        background-color:{{ data.pc_btn_hover_bgc|default('#FFFFFF') }};
    }
}

{# PC + pad 模式 #}
@media screen and (min-width: 768px) {
    {{ body }} {
        {% if data.btn_show ?? 1 != 0 %}
            display: block;
        {% else %}
            display: none;
        {% endif %}
    }
    {{ body }} .gs-btn-area{
        margin-top:{{ data.pc_margin_top|default('0') }}px;
        margin-bottom:{{ data.pc_margin_bot|default('32') }}px;
        width:{{ data.pc_btn_width|default('200') }}px;
        height:{{ data.pc_btn_height|default('50') }}px;
        line-height:{{ data.pc_btn_height|default('50') - (data.pc_border_width|default(2))*2 }}px;
        border-radius:{{ data.pc_btn_radius|default('25') }}px;
{#        margin-left:{{ data.pc_margin_left|default(0) }}px;#}
        border-width:{{ data.pc_border_width|default(2) }}px;
        font-size:{{ data.pc_ft_size|default(20) }}px;
    }

    {{ body }} .gs-btn-area .gs-btn{
        {% if data.pc_bg_image %}
            background:url({{ data.pc_bg_image }}) no-repeat center center;
            background-size: 100% 100%;
        {% endif %}
    }



}

