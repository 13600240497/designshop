{% set liCol = ['geshop-col-12','geshop-col-6','geshop-col-4','geshop-col-3','geshop-col-2','geshop-col-1'] %}
{% set suffix ='rem' %}
{% set remUnit = 75 %}

{% if data.colNum == '1' %}
	{% set colClass = liCol[0] %}
{% elseif data.colNum == '2' %}
	{% set colClass = liCol[1] %}
{% elseif data.colNum == '3' %}
	{% set colClass = liCol[2] %}
{% elseif data.colNum == '4' %}
	{% set colClass = liCol[3] %}
{% elseif data.colNum == '5' %}
	{% set colClass = liCol[4] %}
{% else %}
	{% set colClass = liCol[3] %}
{% endif %}





{% set pageData = {
	price_ft_weight:data.price_ft_weight|default(1),
	base_bg_shadow:data.base_bg_shadow|default(0),
	lang:data.lang|default('en'),
	base_magin_bottom:data.base_magin_bottom|default(32)/remUnit~suffix,
	base_bgc:data.base_bgc is not null ? data.base_bgc:'#F8F8F8',
	price_color:data.price_color is not null ? data.price_color: '#f30240',
	discount_bgc:data.discount_bgc is not null ? data.discount_bgc:'#FF8A00',
	discount_ftc:data.discount_ftc is not null ? data.discount_ftc:'#FFFFFF',
	buy_bgc:data.buy_bgc is not null ? data.buy_bgc:'#FF8A00',
	buy_ftc:data.buy_ftc is not null ? data.buy_ftc:'#FFFFFF',
	down_bgc: data.down_bgc is not null ? data.down_bgc:'#333333',
	down_ftc: data.down_ftc is not null ? data.down_ftc:'#FFFFFF',
	limit_progress_bgc: data.limit_progress_bgc is not null ? data.limit_progress_bgc:'#FF8A00',
	limit_left_color: data.limit_left_color is not null ? data.limit_left_color:'#FF8A00',
	limit_type: data.limit_type|default(1),
	limit_stock_active: data.limit_stock_active|default(1),

	market_active: data.market_active|default(1),
	price_fts:(data.price_fts|default(32)/remUnit)|number_format(3, '.')~suffix,
	discount_active: data.discount_active|default(1),
	discount_height:(data.discount_height|default(70)/remUnit)|number_format(3, '.')~suffix,
	discount_width:(data.discount_width|default(70)/remUnit)|number_format(3, '.')~suffix,
	discount_right:(data.discount_right|default(12)/remUnit)|number_format(3, '.')~suffix,
	discount_top:(data.discount_top|default(12)/remUnit)|number_format(3, '.')~suffix,
	discount_bgImage:data.discount_bgImage,
	discount_fts:(data.discount_fts|default(24)/remUnit)|number_format(3, '.')~suffix,
	discount_off_fts:(data.discount_off_fts|default(22)/remUnit)|number_format(3, '.')~suffix,
	buy_text:data.buy_text|default(gb_component_trans(lang , 'buy_now')),
	buy_fts:data.buy_fts|default(24)/remUnit~suffix,
	limit_end_active: data.limit_end_active|default(1),
	goods_title_active:data.goods_title_active|default(1),
	down_active:data.down_active|default(1),
	limit_active:data.limit_active|default(1),
	shop_price_weight:data.shop_price_weight|default(1),
	
	baseWidth:1000,
	col:2,
	marginRight:12,
	
	
	view_more_ftc:data.view_more_ftc is not null ? data.view_more_ftc : "#333333",
	view_more_bgc:data.view_more_bgc is not null ? data.view_more_bgc : "#FFFFFF",
	view_more_text:data.view_more_text|default(gb_component_trans(lang , 'view_more')),
	view_less_text:data.view_less_text|default(gb_component_trans(lang , 'view_less')),
	view_more_border_color:data.view_more_border_color is not null ? data.view_more_border_color : "#333333",
	view_more_fts:(data.view_more_fts|default(24)/remUnit)|number_format(3, '.'),
	view_more_radius:(data.view_more_radius|default(4)/remUnit)|number_format(3, '.')~suffix,
	view_more_width:(data.view_more_width|default(196)/remUnit)|number_format(3, '.')~suffix,
	view_more_height:(data.view_more_height|default(56)/remUnit)|number_format(3, '.')~suffix,
	
	view_all_ftc:data.view_all_ftc is not null ? data.view_all_ftc : "#333333",
	view_all_text:data.view_all_text|default(gb_component_trans(lang , 'view_all')),
	view_all_link:data.view_all_link|default(""),
	view_all_fts:(data.view_all_fts|default(28)/remUnit)|number_format(3, '.'),
	view_all_weight:data.view_all_weight|default(1),
	view_all_active:data.view_all_active|default(1),
	
	kill_title_color:data.kill_title_color is not null ? data.kill_title_color:'#333333',
	kill_statusText_color:data.kill_statusText_color is not null ? data.kill_statusText_color:'#333333',
	kill_time_bgc:data.kill_time_bgc is not null ? data.kill_time_bgc:'#333333',
	kill_time_ft_color:data.kill_time_ft_color is not null ? data.kill_time_ft_color:'#FFFFFF',
	kill_textStatus_line_color:data.kill_textStatus_line_color is not null ? data.kill_textStatus_line_color:'#333333',
	kill_title_text:data.kill_title_text|default('FLASH SALE'),
	kill_title_fts:(data.kill_title_fts|default(40)/remUnit)|number_format(3, '.')~suffix,
	kill_time_fts:(data.kill_time_fts|default(24)/remUnit)|number_format(3, '.')~suffix,
	kill_time_radius:(data.kill_time_radius|default(8)/remUnit)|number_format(3, '.')~suffix,
} %}

{% set liWidth = (pageData.baseWidth-3*pageData.marginRight)/pageData.col %}


<div class="geshop-component-box component-drag geshop-component-goods component-sync clearfix U000094-{{ pageInstanceId }} ui-U000094_model2 geshop-gb-component ui-{{ pageInstanceId }}" data-key="U000094"
		 data-id="{{ pageInstanceId }}" data-editenv="{{ data.isEditEnv }}" data-static-domain="{{ staticDomain }}" data-vis="{{ liLength }}"
		 data-limitendactive="{{ pageData.limit_end_active }}" data-buytext="{{ pageData.buy_text }}"
		 data-lang="{{ lang }}"
		 style="{% if data.boxMarginTop %}margin-top: {{ data.boxMarginTop }}px;{% endif %} {% if data.boxMarginBottom %}margin-bottom: {{ data.boxMarginBottom }}px;{% endif %}">
	<!-- embed stylesheet begin -->
	<style type="text/css">
		.geshop-gb-component.U000094-{{ pageInstanceId }} {
			margin-bottom: {{pageData.base_magin_bottom}};
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gb_goodsWrap {
			position: relative;
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gb_goodsWrap .gb-list-default {
			margin-right: -0.5667rem !important;
		}

		
		
		{# 限时抢购 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-gb-timer .gs-goods-time--m {
			background-color: {{pageData.down_bgc}};
			display:none;
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-gb-timer .gs-goods-time--m .gs-goodsRushDown {
			color: {{pageData.down_ftc}};
		}
		
		{# 折扣标 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-discount--m {
			background-color: {{pageData.discount_bgc}};
			color: {{pageData.discount_ftc}};
			width: {{pageData.discount_width}};
			height: {{pageData.discount_height}};
			top: {{pageData.discount_top}};
			right: {{pageData.discount_right}};
		{% if pageData.discount_bgImage %} background: url({{pageData.discount_bgImage}}) no-repeat center center/100% 100%;
			border-radius: 0;
			border-radius: 50%;
		{% endif %}
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-discount--m .curtoff-box {
			font-size: {{pageData.discount_fts}};
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-discount--m .curtoff-text {
			font-size: {{pageData.discount_off_fts}};
		}
		
		{# 库存相关 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-progress .num {
			color: {{pageData.limit_left_color}};
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-progress i {
			background-color: {{pageData.limit_progress_bgc}};
		}
		
		{# 售价 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-price--m .gs-shop-price {
			font-size: {{pageData.price_fts}};
			color: {{pageData.price_color}};
		}
		
		{% if pageData.shop_price_weight == '1' %}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-price--m .gs-shop-price strong {
			font-weight: bold;
		}
		
		{% endif %}
		
		{# 购买按钮设置 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-buy--m .buyLink {
			color: {{pageData.buy_ftc}};
			background-color: {{pageData.buy_bgc}};
			font-size: {{pageData.buy_fts}};
		}

		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-item-common {
			position: relative;
			width: 4.2rem;
			height: 5.6rem;
			text-align: center;
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
		}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-goods-item-common img {
			display: block;
			width: 100%;
			height: 100%;
		}
		
		{# view 按钮样式 #}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .view-more {
			min-height: {{2 * pageData.view_all_fts}}rem;
			margin-right: 0 !important;
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .view-more-btn {
			margin-top: {{pageData.view_all_fts - pageData.view_more_fts}}rem;
			color: {{pageData.view_more_ftc}};
			background-color: {{pageData.view_more_bgc}};
			line-height: {{ pageData.view_all_fts - pageData.view_more_fts > 0 ? 1.5 * pageData.view_all_fts : 1.5 * pageData.view_more_fts }}rem;
			font-size: {{pageData.view_more_fts}}rem;
			border-radius: {{pageData.view_more_radius}};
			border: 1px solid{{pageData.view_more_border_color}};
			width: {{ pageData.view_more_width }};
			overflow: hidden;
			white-space: nowrap;
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .view-all-btn {
			color: {{pageData.view_all_ftc}};
			line-height: {{ pageData.view_all_fts - pageData.view_more_fts > 0 ? 1.5 * pageData.view_all_fts : 1.5 * pageData.view_more_fts }}rem;
			font-size: {{pageData.view_all_fts}}rem;
		{% if pageData.view_all_weight %} font-weight: bold;
		{% endif %}
		}
		
		{# 秒杀配置#}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gb-kill-title {
			font-size: {{ pageData.kill_title_fts }};
			line-height:{{ pageData.kill_title_fts }};
			color: {{ pageData.kill_title_color }};
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gb-kill-statusText {
			color: {{ pageData.kill_statusText_color }};
		}
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gs-kill-down em {
			font-size: {{ pageData.kill_time_fts }};
			border-radius: {{ pageData.kill_time_radius }};
			background-color: {{ pageData.kill_time_bgc }};
			color: {{ pageData.kill_time_ft_color }}
		}
		
		.geshop-gb-component.U000094-{{ pageInstanceId }} .gb-kill-time{
			display:inline-block;
		}
		
		.geshop-gb-component.ui-{{ pageInstanceId }} .gs-goods-buy--m{
			position: relative;
			z-index: 2;
		}

</style>
	<!-- embed stylesheet end -->
	
	<div class="geshop-col-12">
		<div class="gb_goodsWrap gb_wrapper_common" data-skus="{{ data.goodsSKUList }}" data-isEditEnv="{{ data.isEditEnv }}" style="{% if data.baseFtFa %}font-family:{{data.baseFtFa}};{% endif %}">
			{# total time #}
			<div class="gb-kill-warp">
				<div class="gb-kill-title">{{ pageData.kill_title_text }}</div>
				<div class="gb-kill-statusText">{{ GlobalLanguages.ends_in|default('Ends In') }}</div>
				<div class="gb-kill-time">
					<div class="gs-kill-down" data-begin="{{ data.down_timestamp_start|default(0) }}" data-end="{{ data.down_timestamp_end|default(0) }}"><em>00</em>:<em>00</em>:<em>00</em>:<em>00</em></div>
				</div>
			</div>
			{# total time end #}
			{# felix #}
			<ul class="clearfix gb-list-default gb-lists-default" data-shownum="{{ data.defaultGoodsCount }}">
				{% for key,item in data.goodsInfo|default(0..3) %}
					{% set isHide = (key >= data.defaultGoodsCount and data.defaultGoodsCount > 0) ? 'isHide' : "" %}
					{{ include ('@app/files/parts/temp/gb/index_default_m_test.twig') }}
				{% endfor %}
			</ul>
			{# view 按钮 #}
			{{ include ('@app/files/parts/temp/gb/common/default_m/goodMoreBtn.twig') }}
		</div>
	</div>
</div>

