{% set space = '#U000041_'~pageInstanceId %}
{% set body =  space~' .geshop_u000041_default_body' %}

{{ space }} {
    {% if data.isEditEnv == 1 %}
        width: 1200px;
        margin: 0 auto;
        overflow: hidden;
    {% endif %}
}

{{ body }} {
    margin-bottom: {{ data.box_margin_bottom | default(32) }}px;
    background-color:{{ data.box_bg_color | default('#F8F8F8') }};
}

{{ body }} .nav_tab{
    background-color:{{ data.tab_bg_color | default('#FFFFFF') }};
}


{{ body }} .nav_tab ul li{
    height: {{ data.tab_btn_height | default('30') }}px;
    line-height: {{ data.tab_btn_height | default('30') }}px;
    background-color:{{ data.tab_btn_bg_color | default('#FFFFFF') }};
    color: {{ data.tab_btn_font_color | default('#222222') }};
    border: 1px solid {{ data.tab_btn_border_color | default('#222222') }};
    border-radius:{{ data.tab_btn_radius_size | default('2') }}px;
    font-size: {{ data.tab_btn_font_size | default('14') }}px;
    margin-right: 8px;
    margin-left: 8px;
}

{{ body }} .nav_tab ul li:hover{
    background-color:{{ data.tab_btn_hover_bg_color | default('#222222') }};
    color: {{ data.tab_btn_hover_font_color | default('#FFFFFF') }};

    {% if data.tab_btn_border_color %}
        border: 1px solid {{ data.tab_btn_hover_border_color }};
    {% endif %}
}

{{ body }} .nav_tab ul li.is_check{
    background-color: {{ data.tab_btn_hover_bg_color | default('#222222') }} !important;
    color: {{ data.tab_btn_hover_font_color | default('#FFFFFF') }} !important;
}

{# 商品样式 #}
{{ body }} .goods_list_wrap li{
    border: 1px solid {{ data.goods_info_border_color | default('#FFFFFF') }};
    border-radius:{{ data.goods_info_radius_size | default('4') }}px;
}

{{ body }} .btn_prev {
    border-color: transparent {{ data.arr_color | default('#222222') }} transparent transparent;
}
{{ body }} .btn_next {
    border-color: transparent transparent transparent {{ data.arr_color | default('#222222') }};
}

{{ body }} .GESHOP_pagination ul li{
    color: {{ data.arr_font_color | default('#666666') }};
}

{{ body }} .GESHOP_pagination ul li.active{
    color: {{ data.arr_check_font_color | default('#222222') }};
}
