<script>




    {#  自定义保存函数 #}
    function onSubmit(progress) {
        var imgSrc = $("input[name='base_img']").val() || null;
        var img = $("input[name='areas']").attr('data-src');
        if (img != imgSrc) {
            /* 判断当前图片否为同一张 */
            $("input[name='areas']").val(0);
        }
        progress.next()
    }

</script>
