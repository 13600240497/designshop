{{include ('@app/htdocs/resources/template/pc/templateList/index.twig')}}

<div class="component-form-setting-item component-form-advanced-item">
  <h4 class="title"><i class="layui-icon back" id="js_advanced_baseConfig">&#xe603;</i>高级设置</h4>
  <div class="layui-collapse advanced-setting-container">
    <div class="layui-colla-item">
      <h2 class="layui-colla-title">基础设置</h2>
      <div class="layui-colla-content layui-show">
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 上外边距(px)</label>
          <div class="layui-input-block">
            <input type="text" name="boxMarginTop" autocomplete="off" class="layui-input" value="{{ data.boxMarginTop }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 下外边距(px)</label>
          <div class="layui-input-block">
            <input type="text" name="boxMarginBottom" autocomplete="off" class="layui-input" value="{{ data.boxMarginBottom }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 上内边距(px)</label>
          <div class="layui-input-block">
            <input type="text" name="boxPaddingTop" autocomplete="off" class="layui-input" value="{{ data.boxPaddingTop }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 下内边距(px)</label>
          <div class="layui-input-block">
            <input type="text" name="boxPaddingBottom" autocomplete="off" class="layui-input" value="{{ data.boxPaddingBottom }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 高度(px)</label>
          <div class="layui-input-block">
            <input type="text" name="height" autocomplete="off" class="layui-input" value="{{ data.height }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 背景图片</label>
          <div class="layui-input-block">
            <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
            <input type="text" name="imgSrc" autocomplete="off" class="layui-input" value="{{ data.imgSrc }}">
          </div>
        </div>
      </div>
    </div>
    <div class="layui-colla-item">
      <h2 class="layui-colla-title">标题</h2>
      <div class="layui-colla-content">
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 宽度(px)</label>
          <div class="layui-input-block">
            <input type="text" name="titleWidth" autocomplete="off" class="layui-input" value="{{ pageData.titleWidth}}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 大小(px)</label>
          <div class="layui-input-block">
            <input type="text" name="titleFont" autocomplete="off" class="layui-input" value="{{ data.titleFont }}">
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 粗细</label>
          <div class="layui-input-block">
            <input type="radio" name="titleWeight" value="bold" title="加粗"{% if data.titleWeight|default('bold') == 'bold' %} checked{% endif %}>
            <input type="radio" name="titleWeight" value="normal" title="正常"{% if data.titleWeight|default('bold') != 'bold' %} checked{% endif %}>
          </div>
        </div>
        <div class="layui-form-item">
          <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 背景图片</label>
          <div class="layui-input-block">
            <a href="javascript:;" class="js_openResource design-open-resource"><i class="layui-icon">&#xe64a;</i></a>
            <input type="text" name="titleBgI" autocomplete="off" class="layui-input" value="{{ data.titleBgI }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

