      <label class="form-item-label"><span class="layui-badge-dot layui-bg-orange"></span> 颜色</label>
      <div class="layui-input-block">
        <div class="color-picker-selector" data-hidden-name="titleColor"><div style="background-color: {{ data.titleColor }};"></div></div>
        <input type="text" class="layui-input" name="titleColor" autocomplete="off" value="{{ data.titleColor }}">
      </div>
    </div>
  </div>
  <div class="clearfix">
    <a href="javascript:;" id="js_moreConfig" style="color:#1E9FFF">高级设置</a>
  </div>
</div>

