{# tab 商品运营平台 #}
<style>
    .layui-elem-field > h3 {
        display: inline-block;
        float: left;
    }

    .goods__tab--wrap fieldset.layui-elem-field.tab-fid {
        text-align: right;
        margin: 0;
    }

    .second-list .list-group-item {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        width: 100%;
        padding: 0 16px 13px;
        margin: 13px auto;
        height: auto;
        background: rgba(254, 254, 254, 1);
        border-radius: 4px;
        border: 1px solid rgba(230, 230, 230, 1);
    }

    .second-list .list-group-item .select-item {
        margin-left: 0px !important;
    }

    .second-list .list-group-item .gs-tab-title .layui-form-radio {
        margin-right: 0px !important;

    }

    .goods__tab--wrap .layui-form-item {
        margin: 16px auto;
    }

    .goods__tab--wrap .layui-form-item .layui-form-radio {
        margin-right: 0px !important;
        padding-right: 0px !important;
    }

    .wrap-config.hide {
        display: none;
    }

    /* 商品数据按钮 */
    .goods__tab--wrap .goods-id-btn {
        height: 40px;
        line-height: 40px;
        background: rgba(30, 159, 255, 0.05);
        border-radius: 4px;
        border: 1px solid rgba(30, 159, 255, 1);
        color: #1E9FFF;
    }

    .goods__tab--wrap .goods-btn-box {
        display: flex;
        justify-content: space-between;
    }

    .goods__tab--wrap .goods-btn-reset {
        padding: 0 15px;
        float: right;
    }

    .goods__tab--wrap .goods-btn-full {
        width: 100%;
    }

    .goods__tab--wrap .goods-id-input {
        float: left;
        margin-right: 10px;
        height: 40px;
    }

    .goods__tab--wrap .tab_key {
        color: inherit !important;
    }

</style>

<section class="goods__tab--wrap">

    <input type="hidden" class="Unwanted" name="sku_selector_parent" value=".radio-tab-group">
    {# tab 数据#}
    <input type="hidden" name="tab_list" value='{{ json_encode_no_unicode(data.tab_list | default({})) }}'>
    {# goods_source_info 商品运营平台数据对象 #}
    <input type="hidden" name="goods_source_info">

    {% if data.tab_list %}
        {% set list =  data.tab_list %}
    {% else %}
        {% set list = [{ "goods_source_info":{},"goods_btn_value":''}] %}
    {% endif %}

    <div class="nav-form-wrap">
        {% for i,item in list %}
            <div class="wrap-config">
                <div class="second-list">
                    <div class="list-group-item">
                        <!--商品数据-->
                        <div class="layui-form-item">
                            <div class="goods-form-table">
                                <div class="goods-tab-lists">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">tab<span class="tab_key">{{ i + 1 }}分类名称</span></label>
                                        <div class="layui-input-block">
                                            <input type="text" class="layui-input" name="tab_name"
                                                   value="{{ item.name }}">
                                        </div>
                                    </div>
                                    <div class="radio-tab-group">
                                        <div class="layui-form-item goods__btn--wrapper">
                                            <label class="gs-label-block gs-label-blank"></label>
                                            <div class="layui-input-block">
                                                <span class="layui-btn layui-btn-normal layui-btn-sm goods-id-btn goods-btn-full {% if item.goods_btn_value %} layui-hide{% endif %}">
                                                    选择商品数据
                                                </span>
                                                <div class="goods-btn-box {% if item.goods_btn_value is empty %}layui-hide{% endif %}">
                                                    {# goods_source_info 商品运营平台数据对象 #}
                                                    <input type="hidden" name="goods_source_info" class="unWanted"
                                                           value='{{ json_encode_no_unicode(item.goods_source_info) }}'>
                                                    <input type="text" name="goods_btn_value"
                                                           value="{{ item.goods_btn_value }}"
                                                           class="layui-input goods-id-input layui-disabled" disabled>
                                                    <span class="layui-btn layui-btn-normal layui-btn-sm goods-id-btn goods-btn-reset">重新选择</span>
                                                </div>
                                            </div>
                                        </div>

                                        {# {% include '@app/files/parts/temp/tab_ips_form.twig' with{'tabItem':item,ipsMethodsArr: ['1','2']} %}#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--操作按钮-->
                <fieldset class="layui-elem-field tab-fid">
                    <span class="img-btn f-delete">
                          <i class='icon-delete'></i>
                          <b class="tips">删除</b>
                    </span>
                    <span class="img-btn f-up class-close">
                          <i class='icon-up'></i>
                          <b class="tips">上移</b>
                    </span>

                    <span class="img-btn f-down class-close">
                          <i class='icon-down'></i>
                          <b class="tips">下移</b>
                    </span>
                    <span class="img-btn f-add class-close">
                          <i class='icon-add'></i>
                        <b class="tips">新增</b>
                    </span>
                </fieldset>

            </div>
        {% endfor %}
    </div>

</section>

<!--拷贝-->
<div class="wrap-config hide">
    <div class="second-list">
        <div class="list-group-item">
            <!--商品数据-->
            <div class="layui-form-item">
                <div class="goods-form-table">
                    <div class="goods-tab-lists">
                        <div class="layui-form-item">
                            <label class="layui-form-label">tab<span class="tab_key">1分类名称</span></label>
                            <div class="layui-input-block">
                                <input type="text" class="layui-input" name="tab_name">
                            </div>
                        </div>
                        <div class="radio-tab-group">
                            <div class="layui-form-item goods__btn--wrapper">
                                <label class="gs-label-block gs-label-blank"></label>
                                <div class="layui-input-block">
                                                <span class="layui-btn layui-btn-normal layui-btn-sm goods-id-btn goods-btn-full">
                                                    选择商品数据
                                                </span>
                                    <div class="goods-btn-box layui-hide">
                                        {# goods_source_info 商品运营平台数据对象 #}
                                        <input type="hidden" name="goods_source_info" class="unWanted">
                                        <input type="text" name="goods_btn_value"
                                               class="layui-input goods-id-input layui-disabled" disabled>
                                        <span class="layui-btn layui-btn-normal layui-btn-sm goods-id-btn goods-btn-reset">重新选择</span>
                                    </div>
                                </div>
                            </div>
                            {#                            {% include '@app/files/parts/temp/tab_ips_form.twig' with{'tabItem':{},ipsMethodsArr: ['1','2']} %}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--操作按钮-->
    <fieldset class="layui-elem-field tab-fid">
        <span class="img-btn f-delete">
              <i class='icon-delete'></i>
              <b class="tips">删除</b>
        </span>
        <span class="img-btn f-up class-close">
              <i class='icon-up'></i>
              <b class="tips">上移</b>
        </span>

        <span class="img-btn f-down class-close">
              <i class='icon-down'></i>
              <b class="tips">下移</b>
        </span>
        <span class="img-btn f-add class-close">
              <i class='icon-add'></i>
            <b class="tips">新增</b>
        </span>
    </fieldset>

</div>


<script>
/* 初始化删除等标签的显示和隐藏 */
var $wrap = $('{{ formID }}').find('.nav-form-wrap');
var $hdWrap = $('{{ formID }}').find('.goods__tab--wrap');
/*限制tab个数*/
var limitNum = '{{ componentData.limitNum|default(0) }}';
var limitTip = '{{ componentData.limitTip|default('') }}';

/* 组件初始化 */
$(function () {
    var $id = $('{{ formID }}');
    var $tab = $('.goods__tab--wrap', $id).parents('.layui-tab:eq(0)');
});

var tab_manager = (function (my) {
    /*一级图标的显示隐藏*/
    my.showIcon = function () {
        this.upNum();

        /*一级图标操作容器个数*/
        var len = $wrap.find('.tab-fid').length;
        if (len > 1) {
            $wrap.find('.tab-fid').each(function (index) {
                if (index == 0) {
                    $(this).find('.img-btn').hide();
                    $(this).find('.f-down').show();
                    $(this).find('.f-add').show();
                    $(this).find('.f-delete').show();
                } else {
                    $(this).find('.img-btn').show();
                    if (index == len - 1) {
                        $(this).find('.f-down').hide();
                    }
                }
            });
        } else {
            $wrap.find('.tab-fid').find('.img-btn').hide();
            $wrap.find('.tab-fid').find('.f-add').show();
        }
    };
    /*更新一级导航的数字 tab{x}*/
    my.upNum = function () {
        $wrap.find('.tab_key').each(function (index) {
            $(this).text(index + 1 + '分类名称');
        });
    };
    /* 新增一级分类 */
    my.addOne = function () {
        var clone = $('.wrap-config.hide').clone(true);
        $wrap.append(clone);
        $wrap.find('.wrap-config.hide').removeClass('hide');
        tab_manager.showIcon();
        tab_manager.updateNavNum($wrap.find('.wrap-config').length);
    };
    /*更新Tab数量*/
    my.updateNavNum = function (value) {
        $hdWrap.find('input[name="tab_num"]').val(value);
    };
    return my;
}({}));


/*一级图标的显示隐藏*/
tab_manager.showIcon();

/* 新增一级分类 */
$wrap.on('click', '.f-add', function (e) {
    e.stopPropagation();
    /*限制增加数量*/
    if (limitNum && $('.wrap-config', $wrap).length >= limitNum) {
        layui.layer.msg(limitTip);
        return false;
    }
    tab_manager.addOne();
});

/* 下移分类 */
$wrap.on('click', '.f-down,.s-down', function (e) {
    e.stopPropagation();
    var $tr = '';
    if ($(this).hasClass('f-down')) {
        $tr = $(this).parents('.wrap-config:eq(0)');
    } else {
        $tr = $(this).parents('.list-group-item:eq(0)');
    }
    var $trNext = $tr.next();
    if (0 != $trNext.length) {
        $trNext.after($tr);
        tab_manager.showIcon();
    }
});

/* 上移分类 */
$wrap.on('click', '.f-up,.s-up', function (e) {
    e.stopPropagation();
    var $tr = '';
    if ($(this).hasClass('f-up')) {
        $tr = $(this).parents('.wrap-config:eq(0)');
    } else {
        $tr = $(this).parents('.list-group-item:eq(0)');
    }
    var $trPrev = $tr.prev();
    if (0 != $trPrev.length) {
        $trPrev.before($tr);
        tab_manager.showIcon();
    }
});

/* 删除分类 */
$wrap.on('click', '.f-delete,.s-delete', function (e) {
    var $tr = '';
    if ($(this).hasClass('f-delete')) {
        $tr = $(this).parents('.wrap-config:eq(0)');
    } else {
        $tr = $(this).parents('.list-group-item:eq(0)');
    }
    layer.confirm('是否删除该分类?', {
        title: '提示',
        btn: ['否', '是'],
        area: '420px',
        icon: 3,
        skin: 'element-ui-dialog-class'
    }, function (index) {
        layer.close(index);
    }, function (index) {
        $tr.remove();
        layer.close(index);
        tab_manager.showIcon();
        tab_manager.updateNavNum($wrap.find('.wrap-config').length);
    });

});

/* 获取tab列表数据 */
function getTabInfo () {
    var result = [];
    $('.list-group-item', $wrap).each(function (index, element) {
        var name = $(this).find('[name=tab_name]').val() || '';
        var goods_btn_value = $(this).find('[name=goods_btn_value]').val();
        var goods_source_info = goods_btn_value && JSON.parse($(this).find('[name=goods_source_info]').val()) || {};
        if (goods_btn_value) {
            result.push({
                name: name,
                goods_btn_value: goods_btn_value,
                goods_source_info: goods_source_info
            });
        }

    });
    return result;
}

/**
 * 获取tab数组对象
 * @param callback
 */
function saveTabInfo (callback) {
    var $id = $('{{ formID }}');
    var result = getTabInfo();
    $hdWrap.find('input[name=tab_list]').val(JSON.stringify(result));

    callback && callback();
}

if (!tab_goods_fn) {
    var tab_goods_fn = (function (my) {

        /**
         * 获取tab数据
         * @type {saveTabInfo}
         */
        my.saveTabInfo = saveTabInfo;
        return my;
    }({}));
}

/* 商品选择按钮 */
$hdWrap.on('click', '.goods-btn-full,.goods-btn-reset', function () {
    var $wrapper = $(this).parents('.goods__btn--wrapper').eq(0);
    GoodsSource.goodsDialogOpen($wrapper, function (res) {
        if (res.sop_rule_id) {
            GoodsSource.goodsSourceCallback($wrapper, res);
        }
    });
});
</script>
