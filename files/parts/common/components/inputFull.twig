{% if options %}
    <div class="layui-form-item" style="margin-top: 16px;">
        <label class="gs-label-block">{{ options.label }}<span
                    style="font-size: 12px; color: #9e9e9e;">{{ options.subLabel|default('（*建议输入4的倍数，且不超过100）') }}</span></label>
        <div class="layui-input-block">
            <input class="layui-input" type="text" name={{ options.name }}
                   autocomplete="off" value="{{ options.value|default('') }}">
        </div>
    </div>

{% else %}
    {{include ('@app/files/parts/common/components/argsErrors.twig')}}
{% endif %}